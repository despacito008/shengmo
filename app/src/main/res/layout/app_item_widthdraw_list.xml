<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginHorizontal="15dp"
    tools:ignore="SpUsage"
    android:background="@drawable/bg_round_white"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="¥"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/titleBlack"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_item_withdraw_price"
            android:textColor="@color/titleBlack"
            tools:text="1000"
            android:textSize="27dp"
            android:textStyle="bold"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_item_withdraw_bean"
            android:paddingHorizontal="15dp"
            android:textColor="@color/titleBlack"
            tools:text="2000魔豆"
            android:textSize="14dp"
            android:textStyle="normal"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_withdraw_bank"
        android:textSize="12dp"
        android:paddingVertical="10dp"
        tools:text="招商银行（尾号8762）"
        android:textColor="@color/lightGray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:background="#e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_withdraw_date"
            android:textSize="12dp"
            android:paddingVertical="10dp"
            tools:text="2021.09.09 17:09:09"
            android:textColor="@color/lightGray"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_item_withdraw_state"
            android:textSize="12dp"
            android:paddingVertical="10dp"
            tools:text="审核中"
            android:textColor="@color/lightGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

</LinearLayout>