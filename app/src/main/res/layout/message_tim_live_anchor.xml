<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.aiwujie.shengmo.view.roundview.RoundConstraintLayout
        app:rRadius="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/iv_tim_live_anchor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="165:250"
        tools:background="#6c9"
        android:layout_width="100dp"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/tv_tim_live_living"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="11dp"
        android:text="直播中"
        android:includeFontPadding="false"
        android:paddingHorizontal="2dp"
        android:paddingVertical="1dp"
        android:background="@drawable/bg_round_live_ing_message"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/iv_tim_live_living"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_video_play"
        android:layout_width="20dp"
        android:layout_height="20dp"/>


    <View
        android:background="@drawable/bg_short_video_bottom_mask"
        app:layout_constraintLeft_toLeftOf="@id/iv_tim_live_anchor"
        app:layout_constraintRight_toRightOf="@id/iv_tim_live_anchor"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/tv_tim_live_anchor"
        app:layout_constraintLeft_toLeftOf="@id/iv_tim_live_anchor"
        app:layout_constraintRight_toRightOf="@id/iv_tim_live_anchor"
        app:layout_constraintBottom_toBottomOf="@id/iv_tim_live_anchor"
        tools:text="莫莫莫 莫莫莫 莫莫莫 莫莫莫 莫莫莫 莫莫莫"
        android:maxLength="30"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    </com.aiwujie.shengmo.view.roundview.RoundConstraintLayout>

</FrameLayout>