<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/tv_item_live_ranking_index"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        tools:text="1"
        android:textColor="@color/titleBlack"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <ImageView
        android:id="@+id/iv_item_live_ranking_icon"
        tools:background="#6c9"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_item_live_ranking_index"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <ImageView
        android:id="@+id/iv_item_live_ranking_level"
        app:layout_constraintRight_toRightOf="@id/iv_item_live_ranking_icon"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_live_ranking_icon"
        tools:src="@drawable/user_vip_year"
        app:layout_constraintWidth_percent="0.05"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"/>


    <TextView
        android:id="@+id/tv_item_live_ranking_name"
        android:textSize="14dp"
        android:textColor="@color/titleBlack"
        tools:text="离离原上草"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="@id/iv_item_live_ranking_icon"
        app:layout_constraintLeft_toRightOf="@id/iv_item_live_ranking_icon"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:id="@+id/ll_item_live_ranking_info"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@id/tv_item_live_ranking_name"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_live_ranking_icon"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_live_ranking_info"
            android:textColor="@color/normalGray"
            android:textSize="15dp"
            tools:text="今日有效发言：90次"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
        android:background="#e5e5e5"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

</android.support.constraint.ConstraintLayout>