<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/view_red_bao_header_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="375:105"
        android:background="@drawable/redhuya"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <ImageView
        android:layout_marginTop="25dp"
        android:id="@+id/iv_red_bao_header_back"
        android:tint="@color/white"
        android:src="@drawable/zuofed2ad"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <ImageView
        tools:background="#6cf"
        android:background="@drawable/bg_circle_white"
        app:layout_constraintLeft_toLeftOf="@id/iv_red_bao_header_icon"
        app:layout_constraintRight_toRightOf="@id/iv_red_bao_header_icon"
        app:layout_constraintTop_toTopOf="@id/iv_red_bao_header_icon"
        app:layout_constraintBottom_toBottomOf="@id/iv_red_bao_header_icon"
        android:layout_width="61dp"
        android:layout_height="61dp"/>


    <ImageView
        android:id="@+id/iv_red_bao_header_icon"
        tools:background="#6cf"
        app:layout_constraintBottom_toBottomOf="@id/view_red_bao_header_bg"
        app:layout_constraintTop_toBottomOf="@id/view_red_bao_header_bg"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintWidth_percent="0.167"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="60dp"
        android:layout_height="60dp"/>



    <TextView
        android:id="@+id/tv_red_bao_header_name"
        android:textSize="15dp"
        android:textStyle="bold"
        tools:text="石头哥的红包"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/iv_red_bao_header_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_red_bao_header_info"
        android:textSize="12dp"
        tools:text="恭喜发财,大吉大利"
        android:textColor="@color/lightGray"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_red_bao_header_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content"/>

    <ImageView
        tools:visibility="visible"
        android:visibility="gone"
        android:id="@+id/iv_red_bao_header_over"
        app:layout_constraintTop_toTopOf="@id/tv_red_bao_header_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginRight="30dp"
        android:src="@drawable/ic_over_date"
        app:layout_constraintWidth_percent="0.25"
        android:layout_width="0dp"
        android:layout_height="0dp"/>


    <TextView
        android:id="@+id/tv_red_bao_header_desc"
        android:textSize="12dp"
        tools:text="共3个/30金魔豆，已领取2/21金魔豆"
        android:textColor="@color/lightGray"
        app:layout_constraintTop_toBottomOf="@id/tv_red_bao_header_info"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:visibility="visible"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_red_bao_header_desc"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        android:background="#e5e5e5"
        android:layout_width="0dp"
        android:layout_height="2px"/>

</android.support.constraint.ConstraintLayout>