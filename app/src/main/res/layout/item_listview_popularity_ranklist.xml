<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#333333"
    tools:background="#fff"
    android:paddingLeft="10dp">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/item_listview_popularity_ranklist_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="01"
            android:layout_weight="0.15"
            android:textSize="28px"
            android:textColor="#aaaaaa"
            android:gravity="center_vertical"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="110px"
            android:layout_height="110px"
            >
            <ImageView
                android:id="@+id/item_listview_popularity_ranklist_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <ImageView
                android:id="@+id/item_listview_popularity_ranklist_vip"
                android:layout_width="35px"
                android:layout_height="35px"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/vip"
                android:visibility="invisible"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"></View>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/item_listview_popularity_ranklist_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:textColor="#aaaaaa"
                    android:textSize="28px"
                    android:layout_gravity="center_vertical"
                    />
                <ImageView
                    android:id="@+id/item_listview_popularity_ranklist_shiming"
                    android:layout_width="25px"
                    android:layout_height="20px"
                    android:layout_marginLeft="3dip"
                    android:src="@mipmap/renzheng"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/item_listview_popularity_ranklist_Sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:textSize="18px"
                    android:drawablePadding="3dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/item_listview_popularity_ranklist_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:textSize="18px"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_vertical"
                    />
                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/item_listview_popularity_ranklist_ll_richCount"
                    android:layout_width="wrap_content"
                    android:layout_height="29px"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/item_caifuzhi_bg"
                    android:layout_toRightOf="@+id/item_near_listview_role"
                    android:layout_marginRight="5dp"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:layout_width="31px"
                        android:layout_height="match_parent"
                        android:src="@mipmap/caifuzhi"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/item_listview_popularity_ranklist_richCount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="#febf3b"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:textSize="18px"
                        />
                </com.zhy.autolayout.AutoLinearLayout>
                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/item_listview_popularity_ranklist_ll_beautyCount"
                    android:layout_width="wrap_content"
                    android:layout_height="28px"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/item_meilizhi_bg"
                    android:layout_toRightOf="@+id/item_listview_popularity_ranklist_ll_richCount"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:layout_width="30px"
                        android:layout_height="match_parent"
                        android:src="@mipmap/meilizhi"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/item_listview_popularity_ranklist_beautyCount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="#f56684"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:textSize="18px"/>
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"></View>
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:gravity="right|center_vertical"
            >
            <TextView
                tools:text="10"
                android:id="@+id/item_listview_popularity_ranklist_allcount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="@color/purple_main"
                android:gravity="right|bottom"
                android:textStyle="italic|bold"
                android:shadowColor="#ffb73acb"
                android:shadowRadius="10"
                android:shadowDx="3"
                android:shadowDy="3"
                android:textSize="28px"
                android:paddingRight="3dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#aaaaaa"
                android:text="æ¬¡"
                android:gravity="bottom"
                android:textSize="25px"
                />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#aaaaaa"
        android:layout_alignParentBottom="true"/>
</com.zhy.autolayout.AutoLinearLayout>