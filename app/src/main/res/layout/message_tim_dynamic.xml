<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/minGray"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:background="@drawable/bg_round_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="210dp"
        android:layout_height="120dp"/>

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginVertical="5dp"
        android:id="@+id/tv_message_tim_dynamic_title"
        android:textColor="@color/normalGray"
        tools:text="hi, 分享给你一个动态"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/tv_message_tim_dynamic_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/lightGray"
        android:layout_width="0dp"
        android:layout_height="1px"/>


    <ImageView
        android:id="@+id/iv_message_tim_dynamic"
        tools:src="@mipmap/applogo"
        app:layout_constraintLeft_toLeftOf="@id/tv_message_tim_dynamic_title"
        app:layout_constraintTop_toBottomOf="@id/tv_message_tim_dynamic_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="60dp"
        android:layout_height="60dp"/>


    <TextView
        android:textColor="@color/darkGray"
        tools:text="这是内容巴拉巴拉"
        android:layout_marginHorizontal="8dp"
        android:maxLines="3"
        android:ellipsize="end"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_message_tim_dynamic"
        app:layout_constraintTop_toTopOf="@id/iv_message_tim_dynamic"
        app:layout_constraintBottom_toBottomOf="@id/iv_message_tim_dynamic"
        android:id="@+id/tv_message_tim_dynamic_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>