<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:id="@+id/mChongzhi_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="19%w"
        app:layout_widthPercent="19%w"
        android:layout_gravity="center_horizontal"
        app:layout_marginTopPercent="3%h"
        android:src="@mipmap/qiandai"
        />
    <TextView
        android:id="@+id/mMypurse_Moudou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:text="0魔豆"
        android:layout_gravity="center_horizontal"
        app:layout_marginTopPercent="1%h"
        app:layout_textSizePercent="4.2%w"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_textSizePercent="3.8%w"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#333333"
        android:text="请选择充值金额"/>
    <com.aiwujie.shengmo.customview.MyGridview
        android:id="@+id/mChongzhi_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:numColumns="3"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:layout_marginTop="10dp"></com.aiwujie.shengmo.customview.MyGridview>
    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:layout_textSizePercent="3.2%w"-->
        <!--app:layout_marginLeftPercent="4%"-->
        <!--app:layout_marginRightPercent="4%"-->
        <!--app:layout_marginTopPercent="3%h"-->
        <!--android:textColor="#333333"-->
        <!--android:text="微信转账：619885516、支付宝：13436537298（转后联系客服）"/>-->
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/mChongzhi_exchangVip"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="32%w"
            app:layout_heightPercent="12%w"
            android:gravity="center"
            android:scaleType="fitXY"
            android:background="@mipmap/exchangevip"
            />

        <ImageView
            android:id="@+id/mChongzhi_tuidingka"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="32%w"
            app:layout_heightPercent="12%w"
            android:gravity="center"
            android:scaleType="fitXY"
            android:background="@mipmap/dhtdk"
            />
        <ImageView
            android:id="@+id/mChongzhi_exchangYp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="32%w"
            app:layout_heightPercent="12%w"
            android:gravity="center"
            android:scaleType="fitXY"
            android:background="@mipmap/exchangestamp"
            />
    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>