<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:ignore="SpUsage,ContentDescription,RtlHardcoded,HardcodedText"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_live_ranking"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/ll_live_ranking_tab_time"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp"/>


    <LinearLayout
        android:id="@+id/ll_live_ranking_tab_type"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <View
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="1dp"/>



        <LinearLayout
            android:id="@+id/ll_live_ranking_anchor"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_live_ranking_anchor"
                android:includeFontPadding="false"
                android:textSize="15dp"
                android:textColor="@color/titleBlack"
                android:text="主播榜"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/view_live_ranking_anchor"
                android:visibility="invisible"
                tools:visibility="visible"
                android:background="@drawable/bg_round_titleblack"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="15dp"
                android:layout_height="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_live_ranking_audience"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_live_ranking_audience"
                android:includeFontPadding="false"
                android:textSize="15dp"
                android:textColor="@color/titleBlack"
                android:text="富豪榜"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/view_live_ranking_audience"
                android:visibility="invisible"
                android:background="@drawable/bg_round_titleblack"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="15dp"
                android:layout_height="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_live_ranking_red_bag"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_live_ranking_red_bag"
                android:includeFontPadding="false"
                android:textSize="15dp"
                android:textColor="@color/titleBlack"
                android:text="红包榜"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/view_live_ranking_red_bag"
                android:visibility="invisible"
                android:background="@drawable/bg_round_titleblack"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="15dp"
                android:layout_height="4dp"/>

        </LinearLayout>

        <View
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="1dp"/>

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/bg_round_alpha_ranking_gray"
        android:id="@+id/ll_live_ranking_tab_time"
        app:layout_constraintTop_toBottomOf="@id/ll_live_ranking_tab_type"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="264:30"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/tv_live_ranking_time_day"
            android:textColor="@color/titleBlack"
            android:text="日榜"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_live_ranking_time_week"
            android:textColor="@color/titleBlack"
            android:text="周榜"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_live_ranking_time_month"
            android:textColor="@color/titleBlack"
            android:text="月榜"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_live_ranking_time_all"
            android:textColor="@color/titleBlack"
            android:text="等级"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>