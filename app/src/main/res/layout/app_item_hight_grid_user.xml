<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="6dp"
    app:shape="rectangle"
    app:shape_radius="6dp"
    app:shape_shadowColor="#66131415"
    app:shape_shadowSize="2dp"
    app:shape_solidColor="#fff"
    android:orientation="vertical">

    <com.aiwujie.shengmo.view.roundview.RoundLinearLayout
        app:rRadius="10dp"
        android:orientation="vertical"
        android:layout_marginTop="1dp"
        android:layout_marginHorizontal="3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_marginHorizontal="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/iv_corver"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/iv_corver"
            app:layout_constraintLeft_toLeftOf="@id/iv_corver"
            app:layout_constraintRight_toRightOf="@id/iv_corver"
            app:layout_constraintBottom_toBottomOf="@id/iv_corver"
            android:background="@drawable/bg_high_auth_bottom_mask" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:padding="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/white"
            android:textSize="11sp" />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:paddingHorizontal="10dp"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2102011"
                android:textStyle="bold"
                android:textColor="#ff131415"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_realId"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_marginHorizontal="3dp"
                    android:src="@drawable/ic_zipai" />

                <ImageView
                    android:id="@+id/iv_vidoeAuth"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_marginHorizontal="3dp"
                    android:src="@drawable/ic_shipin" />

                <ImageView
                    android:id="@+id/iv_realName"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_marginHorizontal="3dp"
                    android:src="@drawable/ic_ziliao" />

                <ImageView
                    android:id="@+id/iv_caichan"
                    android:layout_width="11dp"
                    android:layout_height="12dp"
                    android:layout_marginHorizontal="3dp"
                    android:src="@drawable/ic_high_end_wealth_done"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_jiankang"
                    android:layout_width="11dp"
                    android:layout_height="12dp"
                    android:layout_marginHorizontal="3dp"
                    android:src="@drawable/ic_high_end_health_done"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_xueli"
                    android:layout_width="11dp"
                    android:layout_height="12dp"
                    android:layout_marginHorizontal="3dp"
                    android:src="@drawable/ic_high_end_education_done"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_jineng"
                    android:layout_width="11dp"
                    android:layout_height="12dp"
                    android:layout_marginHorizontal="3dp"
                    android:src="@drawable/ic_high_end_skill_done"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_qita"
                    android:layout_width="11dp"
                    android:layout_height="12dp"
                    android:layout_marginHorizontal="3dp"
                    android:src="@drawable/ic_high_end_other_done"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/tv_user_info_sex_and_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@mipmap/san"
                android:drawablePadding="3dp"
                android:paddingHorizontal="5dp"
                android:paddingVertical="0.5dp"
                android:textColor="#FFFFFF"
                android:textSize="12dp"
                tools:background="@drawable/bg_user_info_sex_girl"
                tools:text="27" />

            <TextView
                android:id="@+id/tv_layout_user_normal_info_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:paddingHorizontal="5dp"
                android:paddingVertical="0.5dp"
                android:includeFontPadding="false"
                android:textColor="#FFFFFF"
                android:textSize="10dp"
                tools:background="@drawable/bg_user_info_sex_girl"
                tools:text="慕" />

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="四川省 成都市"
                android:textColor="#ffadadad"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:visibility="gone"
                tools:visibility="visible"/>

            <ImageView
                android:id="@+id/iv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                tools:visibility="visible"
                android:src="@drawable/ic_no_location"/>
        </LinearLayout>

    </LinearLayout>

    </com.aiwujie.shengmo.view.roundview.RoundLinearLayout>

</com.hjq.shape.layout.ShapeFrameLayout>