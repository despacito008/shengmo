<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginVertical="5dp"
    android:paddingVertical="10dp"
    android:paddingHorizontal="20dp"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_stamp_statistical_info"
            android:textColor="@color/titleBlack"
            android:textSize="15dp"
            android:paddingVertical="5dp"
            tools:text="使用20魔豆兑换"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_item_stamp_statistical_time"
            android:textColor="@color/normalGray"
            android:textSize="13dp"
            android:paddingVertical="5dp"
            tools:text="2022-01-27 09:55:05 星期四"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_stamp_statistical_result"
        android:textSize="16dp"
        tools:text = "+1张邮票"
        android:textStyle="bold"
        android:textColor="@color/titleBlack"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:paddingHorizontal="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>