<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.aiwujie.shengmo.activity.PhotoAlbumActivity"
    android:background="#F8F8F8">
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="13%w"
        android:background="#FFFFFF"
        >
        <ImageView
            android:id="@+id/mPhotoAlbum_return"
            android:layout_width="40dp"
            app:layout_heightPercent="50%"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:src="@mipmap/return_back"
            android:layout_marginLeft="12dip"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码相册"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            app:layout_textSizePercent="35%"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"/>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF">
        <ImageView
            android:id="@+id/mPhotoAlbum_bg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="40%h"
            android:padding="45dp"
            />
    </com.zhy.android.percent.support.PercentLinearLayout>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="11%w"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_marginTop="1dip"
        >
        <TextView
            android:id="@+id/jiabujiami"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="开放密码相册"
            app:layout_textSizePercent="35%"
            android:textColor="#333333"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"/>

        <CheckBox
            android:id="@+id/mPhotoAlbum_isOpen"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="70%"
            app:layout_widthPercent="12%"
            android:layout_gravity="center_vertical"
            android:button="@null"
            android:background="@drawable/item_filter_button_bg"
            android:gravity="center"
            app:layout_marginRightPercent="4%"
            />
    </com.zhy.android.percent.support.PercentLinearLayout>
    <TextView
        android:id="@+id/mPhotoAlbum_resetPsw"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_textSizePercent="2%"
        android:textColor="#b73acb"
        android:text="重置密码"/>
</com.zhy.android.percent.support.PercentLinearLayout>
