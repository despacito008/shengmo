<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText,SpUsage"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.aiwujie.shengmo.kt.ui.view.AdvertisementView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:id="@+id/ad_view_recommend"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="750:172"/>
    </android.support.constraint.ConstraintLayout>

    <FrameLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_round_white"
                android:elevation="5dp"
                android:id="@+id/mDynamic_header_ll01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="12dp">

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:src="@drawable/homedyone"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="打赏榜"
                    android:textSize="14dp"
                    android:textColor="#333333" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="15dp"
                android:id="@+id/mDynamic_header_ll03"
                android:background="@drawable/bg_round_white"
                android:elevation="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="12dp">

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:src="@drawable/homedythree"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活跃榜"
                    android:textSize="14dp"
                    android:textColor="#333333" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/mDynamic_header_ll02"
                android:background="@drawable/bg_round_white"
                android:elevation="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="12dp">

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:src="@drawable/homedytwo"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人气榜"
                    android:textSize="14dp"
                    android:textColor="#333333"
                    />
            </LinearLayout>

            <!--<com.zhy.android.percent.support.PercentLinearLayout-->
            <!--android:id="@+id/mDynamic_header_ll04"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:orientation="vertical"-->
            <!--android:layout_weight="1"-->
            <!--android:gravity="center"-->
            <!--android:background="@drawable/item_click_bg_selector"-->
            <!--android:paddingLeft="10dp"-->
            <!--android:paddingRight="10dp"-->
            <!--android:paddingTop="15dp"-->
            <!--android:paddingBottom="15dp">-->
            <!--<ImageView-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="0dp"-->
            <!--app:layout_heightPercent="43%w"-->
            <!--app:layout_widthPercent="43%w"-->
            <!--android:src="@mipmap/homedyfour"/>-->
            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="话题"-->
            <!--app:layout_textSizePercent="12%w"-->
            <!--app:layout_marginTopPercent="10%w"-->
            <!--android:textColor="#333333"-->
            <!--/>-->
            <!--</com.zhy.android.percent.support.PercentLinearLayout>-->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/mDynamic_header_ll05"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp">

                <ImageView
                    android:alpha="0.8"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/homedyfive"
                    app:layout_heightPercent="30%w"
                    app:layout_widthPercent="30%w" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="动态消息"
                    android:textColor="#333333"
                    app:layout_marginTopPercent="5%w"
                    app:layout_textSizePercent="12%w" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:textSize="10sp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/item_messagecount_bg"
            android:textColor="#FFFFFF"
            android:singleLine="true"
            android:text="99"
            android:visibility="gone"
            android:id="@+id/mDynamic_header_redpoint"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_gravity="right"
            app:layout_marginRightPercent="5%w"
            app:layout_marginTopPercent="4.5%w"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@drawable/bg_autopollrecyclerview"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_user_dynamic_topic"
            android:layout_width="14dp"
            android:layout_height="14dp"/>

        <TextView
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/purpleColor"
            android:text="话题"
            android:paddingHorizontal="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_marginLeft="5dp"
            android:background="#e5e5e5"
            android:layout_width="0.5dp"
            android:layout_height="11dp"/>

        <com.aiwujie.shengmo.view.AutoPollRecyclerView
            android:id="@+id/mDynamic_recyclerview"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginVertical="5dp"
            android:scrollbars="none"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp" />

</LinearLayout>