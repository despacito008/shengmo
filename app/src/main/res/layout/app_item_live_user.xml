<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp"
    android:paddingHorizontal="15dp"
    android:background="@drawable/item_click_bg_selector"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_item_live_user_icon"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:background="#6cf"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <View
        tools:visibility="visible"
        android:visibility="gone"
        android:id="@+id/view_item_live_user_mask"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/bg_mask_live_user"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <TextView
        tools:visibility="visible"
        android:visibility="gone"
        android:id="@+id/tv_item_live_user_end"
        app:layout_constraintLeft_toLeftOf="@id/view_item_live_user_mask"
        app:layout_constraintRight_toRightOf="@id/view_item_live_user_mask"
        app:layout_constraintTop_toTopOf="@id/view_item_live_user_mask"
        app:layout_constraintBottom_toBottomOf="@id/view_item_live_user_mask"
        android:textSize="12dp"
        android:gravity="center"
        android:text="已结束"
        android:textColor="@color/white"
        tools:background="@drawable/bg_mask_live_user"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <ImageView
        android:id="@+id/iv_item_live_user_identity"
        app:layout_constraintWidth_percent="0.07"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_live_user_icon"
        app:layout_constraintLeft_toLeftOf="@id/iv_item_live_user_icon"
        tools:src="@drawable/user_vip"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="0dp"
        android:layout_height="0dp"/>


    <android.support.constraint.Guideline
        app:layout_constraintGuide_percent="0.05"
        android:id="@+id/guide_line_live_sign"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:visibility="gone"
        tools:visibility="visible"
        android:id="@+id/iv_item_live_interact"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toBottomOf="@id/guide_line_live_sign"
        app:layout_constraintTop_toTopOf="@id/guide_line_live_sign"
        app:layout_constraintRight_toRightOf="@id/iv_item_live_user_icon"
        android:src="@drawable/ic_live_interact_sign"
        app:layout_constraintWidth_percent="0.05"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"/>


    <ImageView
        android:visibility="gone"
        tools:visibility="visible"
        android:id="@+id/iv_item_live_audio"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toBottomOf="@id/guide_line_live_sign"
        app:layout_constraintTop_toTopOf="@id/guide_line_live_sign"
        app:layout_constraintRight_toLeftOf="@id/iv_item_live_interact"
        android:src="@drawable/ic_live_audio_sign"
        app:layout_constraintWidth_percent="0.05"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <ImageView
        android:visibility="gone"
        tools:visibility="visible"
        android:id="@+id/iv_item_live_contract"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toBottomOf="@id/guide_line_live_sign"
        app:layout_constraintTop_toTopOf="@id/guide_line_live_sign"
        app:layout_constraintRight_toLeftOf="@id/iv_item_live_audio"
        android:src="@drawable/ic_anchor_sign_contract"
        app:layout_constraintWidth_percent="0.05"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <TextView
        android:textSize="16dp"
        android:textColor="@color/titleBlack"
        app:layout_constraintTop_toTopOf="@id/iv_item_live_user_icon"
        app:layout_constraintLeft_toRightOf="@id/iv_item_live_user_icon"
        android:layout_marginLeft="15dp"
        tools:text="海岛的秋天"
        android:id="@+id/tv_item_live_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        app:layout_constraintVertical_bias="0.65"
        android:id="@+id/iv_item_live_user_browse"
        app:layout_constraintLeft_toLeftOf="@id/tv_item_live_user_name"
        app:layout_constraintTop_toTopOf="@id/iv_item_live_user_icon"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_live_user_icon"
        android:src="@drawable/ic_live_browse"
        android:layout_width="12dp"
        android:layout_height="12dp"/>

    <TextView
        android:id="@+id/tv_item_live_user_browse"
        app:layout_constraintLeft_toRightOf="@id/iv_item_live_user_browse"
        app:layout_constraintTop_toTopOf="@id/iv_item_live_user_browse"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_live_user_browse"
        android:textColor="@color/lightGray"
        android:textSize="11dp"
        android:includeFontPadding="false"
        android:layout_marginLeft="5dp"
        tools:text="历史最高2700人观看"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_item_live_user_time"
        app:layout_constraintLeft_toLeftOf="@id/tv_item_live_user_name"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_live_user_icon"
        android:src="@drawable/ic_live_time"
        android:layout_width="12dp"
        android:layout_height="12dp"/>

    <TextView
        android:id="@+id/tv_item_live_user_time"
        app:layout_constraintLeft_toRightOf="@id/iv_item_live_user_time"
        app:layout_constraintTop_toTopOf="@id/iv_item_live_user_time"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_live_user_time"
        android:textColor="@color/lightGray"
        android:textSize="11dp"
        android:includeFontPadding="false"
        android:layout_marginLeft="5dp"
        tools:text="已直播1小时23分钟"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/ll_item_live_user_status"
        android:paddingHorizontal="5dp"
        android:paddingVertical="3dp"
        android:gravity="center"
        android:background="@drawable/bg_round_live_ing"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_live_user_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_item_live_user_icon"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item_live_user_live_ing"
            android:src="@drawable/ic_live_ing"
            android:layout_width="15dp"
            android:layout_height="15dp"/>

        <TextView
            android:layout_marginLeft="3dp"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:text="直播中"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>


    <View
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="3dp"
        android:id="@+id/view_item_live_ticket"
        app:layout_constraintTop_toTopOf="@id/guide_line_live_sign"
        app:layout_constraintDimensionRatio="57:18"
        android:background="@drawable/bg_round_ticket_bg"
        app:layout_constraintHeight_percent="0.1"
        android:layout_width="0dp"
        android:layout_height="0dp"/>


    <ImageView
        android:visibility="visible"
        android:id="@+id/iv_item_live_ticket_bean"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintRight_toRightOf="@id/view_item_live_ticket"
        app:layout_constraintTop_toTopOf="@id/view_item_live_ticket"
        app:layout_constraintBottom_toBottomOf="@id/view_item_live_ticket"
        app:layout_constraintLeft_toLeftOf="@id/view_item_live_ticket"
        android:src="@drawable/ic_ticket_bean"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/tv_item_live_ticket_count"
        android:gravity="center"
        android:visibility="visible"
        app:layout_constraintRight_toRightOf="@id/view_item_live_ticket"
        app:layout_constraintTop_toTopOf="@id/view_item_live_ticket"
        app:layout_constraintBottom_toBottomOf="@id/view_item_live_ticket"
        app:layout_constraintLeft_toRightOf="@id/iv_item_live_ticket_bean"
        android:textColor="@color/white"
        android:text="1000"
        android:textSize="6dp"
        android:includeFontPadding="false"
        android:layout_width="0dp"
        android:layout_height="0dp"/>


    <android.support.constraint.Group
        android:id="@+id/group_item_live_ticket"
        app:constraint_referenced_ids="tv_item_live_ticket_count,iv_item_live_ticket_bean,view_item_live_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>