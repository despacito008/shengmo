<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_click_bg_selector"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_heightPercent="13%h"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical">
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="70%h"
            app:layout_widthPercent="70%h">
            <ImageView
                android:id="@+id/item_at_listview_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/morentouxiang"
                android:background="@drawable/item_icon_bg"
                />
            <ImageView
                android:id="@+id/item_at_listview_hongiang"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="30%h"
                app:layout_widthPercent="30%h"
                android:src="@mipmap/qian"
                android:visibility="invisible"
                />
            <ImageView
                android:id="@+id/item_at_listview_vip"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="30%h"
                app:layout_widthPercent="30%h"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/vip"
                android:visibility="invisible"
                />
        </com.zhy.android.percent.support.PercentRelativeLayout>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="9"
            app:layout_heightPercent="75%h"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_at_listview_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_textSizePercent="55%"
                    android:textColor="#333333"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical"
                    />

                <ImageView
                    android:id="@+id/item_at_listview_shiming"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_heightPercent="45%h"
                    app:layout_widthPercent="55%h"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dip"
                    android:visibility="invisible"
                    android:src="@mipmap/renzheng"
                    />
                <ImageView
                    android:id="@+id/item_at_listview_online"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_heightPercent="30%h"
                    app:layout_widthPercent="30%h"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dip"
                    android:src="@mipmap/lvdian"
                    android:visibility="invisible"
                    />
            </com.zhy.android.percent.support.PercentLinearLayout>
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.75"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_at_listview_Sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    app:layout_textSizePercent="50%"
                    android:drawableLeft="@mipmap/san"
                    android:drawablePadding="3dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/item_at_listview_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    app:layout_textSizePercent="50%"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_vertical"
                    />
            </com.zhy.android.percent.support.PercentLinearLayout>
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.75"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_at_listview_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:singleLine="true"
                    app:layout_textSizePercent="52%"
                    android:textColor="#A7A7A7"
                    android:layout_gravity="center_vertical"
                    />
            </com.zhy.android.percent.support.PercentLinearLayout>
        </com.zhy.android.percent.support.PercentLinearLayout>
        <ImageView
            android:id="@+id/item_at_listview_flag"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="6%w"
            app:layout_widthPercent="6%w"
            android:src="@mipmap/atweixuanzhong"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"
        android:layout_marginLeft="80dp"/>
</com.zhy.android.percent.support.PercentLinearLayout>