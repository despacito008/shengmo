<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:paddingVertical="5dp"
    android:background="@drawable/item_click_bg_selector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/layout_user_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_item_push_top_us_name"
            android:textSize="15dp"
            android:textColor="@color/purple_main"
            tools:text="海上明月"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:paddingVertical="3dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_item_push_top_us_time"
            android:textSize="12dp"
            android:textColor="@color/lightGray"
            tools:text="5小时前"
            android:gravity="center_vertical"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_item_push_top_us_info"
            android:textSize="15dp"
            android:textColor="@color/normalGray"
            tools:text="推顶了你的动态"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"/>

    </LinearLayout>

    <FrameLayout
        android:layout_marginRight="10dp"
        android:layout_width="80dp"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/tv_item_push_top_us_dynamic"
            android:ellipsize="end"
            tools:text="这是一条动态这是一条动态这是一条动态这是一条动态这是一条动态这是一条动态这这是一条动态这是一条动态"
            android:textSize="12dp"
            android:padding="6dp"
            android:maxLength="20"
            android:background="#eee"
            android:maxLines="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_item_push_top_us_dynamic"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

</LinearLayout>