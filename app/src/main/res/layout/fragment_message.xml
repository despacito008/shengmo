<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="13%w"
        android:background="#FFFFFF"
        >
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/mFragment_message_groupsquare"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_textSizePercent="30%"
                android:text="群广场"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="12dip"
                android:textColor="#4b4b4b"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/mMessage_LeftRedPoint"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="4.4%w"
                app:layout_widthPercent="4.4%w"
                android:textSize="10sp"
                android:visibility="gone"
                android:background="@drawable/item_messagecount_bg"
                android:textColor="#FFFFFF"
                app:layout_marginLeftPercent="35%w"
                app:layout_marginTopPercent="9%w"
                />
        </com.zhy.android.percent.support.PercentRelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            app:layout_textSizePercent="35%"/>
        <ImageView
            android:id="@+id/mFragment_message_sandian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_widthPercent="6%"
            android:src="@mipmap/sandian"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            />
    </com.zhy.android.percent.support.PercentRelativeLayout>
  <!--  <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f7f7f7"/>-->
    <FrameLayout
        android:id="@+id/rong_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="50dp"/>
</com.zhy.android.percent.support.PercentLinearLayout>