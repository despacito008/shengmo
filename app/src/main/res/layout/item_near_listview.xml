<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_click_bg_selector"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        >
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/item_near_listview_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/morentouxiang"
                android:background="@drawable/item_icon_bg" />
            <ImageView
                android:id="@+id/item_near_listview_vip"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/vip"
                android:visibility="invisible"
                />
            <ImageView
                android:id="@+id/item_near_listview_hongniang"
                android:layout_width="35px"
                android:layout_height="35px"
                android:src="@mipmap/qian"
                android:visibility="invisible"
                />

            <ImageView
                android:id="@+id/item_near_listview_online"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:src="@drawable/bg_user_online"
                android:visibility="invisible"
                tools:visibility="visible"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_near_listview_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="18px"
                    android:paddingTop="1dp"
                    android:gravity="center"
                    android:paddingBottom="1dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:layout_marginRight="3dp"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/item_near_listview_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26px"
                    android:textColor="#333333"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical"
                    />
                <ImageView
                    android:id="@+id/item_near_listview_shiming"
                    android:layout_width="30px"
                    android:layout_height="25px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dip"
                    android:visibility="invisible"
                    android:src="@mipmap/renzheng"
                    />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dip"
                    android:gravity="right|center_vertical"
                    >
                    <TextView
                        android:id="@+id/item_near_listview_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18px"
                        android:gravity="center_vertical|right"
                        />
                    <TextView
                        android:id="@+id/item_near_listview_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="18px"
                        android:gravity="center_vertical|right"
                        android:layout_marginLeft="10dip"/>
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <TextView
                    android:id="@+id/item_near_listview_Sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:textSize="18px"
                    android:drawableLeft="@mipmap/san"
                    android:drawablePadding="3dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textColor="#ffffff"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/item_near_listview_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:textSize="18px"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textColor="#FFFFFF"
                    android:layout_toRightOf="@+id/item_near_listview_Sex"
                    android:layout_centerVertical="true"
                    />
                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/item_near_listview_ll_richCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:background="@drawable/item_caifuzhi_bg"
                    android:layout_toRightOf="@+id/item_near_listview_role"
                    android:layout_marginRight="5dp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    >
                    <ImageView
                        android:paddingVertical="3dp"
                        android:paddingHorizontal="5dp"
                        android:background="@drawable/bg_user_wealth"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/user_wealth"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        tools:text="10000"
                        android:id="@+id/item_near_listview_richCount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="#febf3b"
                        android:paddingLeft="2dp"
                        android:paddingRight="5dp"
                        android:textSize="10dp"/>



                </com.zhy.autolayout.AutoLinearLayout>
                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/item_near_listview_ll_beautyCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:background="@drawable/item_meilizhi_bg"
                    android:layout_toRightOf="@+id/item_near_listview_ll_richCount"
                    android:visibility="gone"
                    tools:visibility="visible"
                    >
                    <ImageView
                        android:paddingVertical="3dp"
                        android:paddingHorizontal="5dp"
                        android:background="@drawable/bg_user_info_charm"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/user_charm"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        tools:text="1000"
                        android:id="@+id/item_near_listview_beautyCount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="#f56684"
                        android:paddingLeft="2dp"
                        android:paddingRight="5dp"
                        android:textSize="10dp"/>
                </com.zhy.autolayout.AutoLinearLayout>
                <ImageView
                    android:id="@+id/item_near_listview_banSomeOne"
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/jinyanicon"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    />
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.75"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/item_near_listview_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <View
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"
        android:layout_marginLeft="150px"
        android:layout_alignParentBottom="true"/>
</com.zhy.autolayout.AutoLinearLayout>