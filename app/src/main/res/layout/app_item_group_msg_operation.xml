<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:gravity="center"
    tools:ignore="SpUsage,HardcodedText,RtlHardcoded"
    android:paddingVertical="15dp"
    android:paddingLeft="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_item_group_msg_operate_icon"
        tools:src="@drawable/user_svip"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:paddingHorizontal="10dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_group_msg_operate_name"
            android:textSize="15dp"
            android:textColor="@color/titleBlack"
            tools:text="红豆请求加入清风阁"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_item_group_msg_operate_info"
            android:paddingVertical="5dp"
            android:textSize="12dp"
            android:textColor="@color/lightGray"
            tools:text="验证消息：请通过一下"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />

        <TextView
            android:id="@+id/tv_item_group_msg_operate_time"
            android:textSize="12dp"
            android:textColor="@color/lightGray"
            tools:text="2021-09-26 12:30:30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_item_group_msg_operate_ing"
        android:visibility="gone"
        android:paddingHorizontal="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_item_group_msg_operate_agree"
            android:text="同意"
            android:textSize="11dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_group_request_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_item_group_msg_operate_refuse"
            android:text="拒绝"
            android:textSize="11dp"
            android:gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#ff615c"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_group_request_refuse"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_item_group_msg_operate_done"
        android:paddingHorizontal="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="visible"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_group_msg_operate_done"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="已同意"
            android:layout_marginVertical="6dp"
            android:textSize="11dp"
            android:gravity="center"
            android:textColor="#666"
            android:layout_gravity="center"
            android:background="@drawable/bg_group_request_done"/>

        <TextView
            android:id="@+id/tv_item_group_msg_operate_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="处理人小姐姐"
            android:layout_marginVertical="6dp"
            android:textSize="11dp"
            android:gravity="center"
            android:textColor="@color/lightGray"
            android:layout_gravity="center" />
    </LinearLayout>


</LinearLayout>