<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    tools:context="com.aiwujie.shengmo.activity.ConversationActivity">
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="13%w"
        android:background="#FFFFFF"
        >
        <ImageView
            android:id="@+id/mConversation_return"
            android:layout_width="40dp"
            app:layout_heightPercent="50%"
            android:layout_height="0dp"
            android:src="@mipmap/return_back"
            android:layout_marginLeft="12dip"
            android:layout_centerVertical="true"/>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/mConversation_iv_title"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="40%h"
                app:layout_widthPercent="40%h"
                android:src="@mipmap/vip"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:visibility="visible"
                />
            <TextView
                android:id="@+id/mConversation_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textColor="#333333"
                android:layout_gravity="center_vertical"
                app:layout_textSizePercent="35%"/>
        </com.zhy.android.percent.support.PercentLinearLayout>
        <ImageView
            android:id="@+id/mConversation_ivRight"
            android:layout_width="25dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dip"
            app:layout_heightPercent="45%"
            android:layout_centerVertical="true"
            />
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"/>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/mConversation_ll_follow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="13%w"
            android:orientation="horizontal"
            android:background="#a0b73acb"
            android:alpha="0.5"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:visibility="gone">
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="对方已关注你，是否关注对方？"
                    android:textColor="#FFFFFF"
                    app:layout_textSizePercent="5%w"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="互相关注即为好友"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="3dp"
                    app:layout_textSizePercent="3.5%w"/>
            </com.zhy.android.percent.support.PercentLinearLayout>
            <TextView
                android:id="@+id/mConversation_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:textColor="#FFFFFF"
                app:layout_textSizePercent="3.3%w"
                android:background="@drawable/item_whiteline_bg"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                app:layout_marginTopPercent="3%w"
                app:layout_marginBottomPercent="3%w"
                app:layout_marginLeftPercent="3.5%w"
                app:layout_marginRightPercent="3.5%w"
                android:background="#FFFFFF"
                />
            <ImageView
                android:id="@+id/mConversation_follow_close"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@mipmap/guanzhucha"
                app:layout_widthPercent="3.5%w"
                android:layout_gravity="center_vertical"
                />
        </com.zhy.android.percent.support.PercentLinearLayout>
        <fragment
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:name="io.rong.imkit.fragment.ConversationFragment"
            android:id="@+id/conversation"/>

    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>
