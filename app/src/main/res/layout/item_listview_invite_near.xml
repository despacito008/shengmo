<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_click_bg_selector"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        >
        <ImageView
            android:id="@+id/item_listview_invite_near_flag"
            android:layout_width="45px"
            android:layout_height="45px"
            android:src="@mipmap/atweixuanzhong"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            />
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/item_listview_invite_near_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/morentouxiang"
                android:background="@drawable/item_icon_bg"
                />
            <ImageView
                android:id="@+id/item_listview_invite_near_vip"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/vip"
                android:visibility="invisible"
                />
            <ImageView
                android:id="@+id/item_listview_invite_near_hongniang"
                android:layout_width="30px"
                android:layout_height="30px"
                android:src="@mipmap/qian"
                android:visibility="invisible"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_listview_invite_near_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26px"
                    android:textColor="#333333"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical"
                    />
                <ImageView
                    android:id="@+id/item_listview_invite_near_shiming"
                    android:layout_width="25px"
                    android:layout_height="20px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dip"
                    android:visibility="invisible"
                    android:src="@mipmap/renzheng"
                    />
                <ImageView
                    android:id="@+id/item_listview_invite_near_online"
                    android:layout_width="10px"
                    android:layout_height="10px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dip"
                    android:src="@mipmap/lvdian"
                    android:visibility="invisible"
                    />
                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dip">
                    <TextView
                        android:id="@+id/item_listview_invite_near_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="18px"
                        android:layout_alignParentRight="true"
                        />
                    <TextView
                        android:id="@+id/item_listview_invite_near_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textSize="18px"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dip"/>
                </com.zhy.autolayout.AutoRelativeLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.75"
                >
                <TextView
                    android:id="@+id/item_listview_invite_near_Sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:textSize="18px"
                    android:drawableLeft="@mipmap/san"
                    android:drawablePadding="3dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textColor="#FFFFFF"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/item_listview_invite_near_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:textSize="18px"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textColor="#FFFFFF"
                    android:layout_toRightOf="@+id/item_listview_invite_near_Sex"
                    android:layout_centerVertical="true"
                    />
                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/item_invite_listview_ll_richCount"
                    android:layout_width="wrap_content"
                    android:layout_height="27px"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:background="@drawable/item_caifuzhi_bg"
                    android:layout_toRightOf="@+id/item_listview_invite_near_role"
                    android:layout_marginRight="5dp"
                    >
                    <ImageView
                        android:layout_width="30px"
                        android:layout_height="match_parent"
                        android:src="@mipmap/caifuzhi"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/item_invite_listview_richCount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="#febf3b"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:textSize="18px"/>
                </com.zhy.autolayout.AutoLinearLayout>
                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/item_invite_listview_ll_beautyCount"
                    android:layout_width="wrap_content"
                    android:layout_height="27px"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:background="@drawable/item_meilizhi_bg"
                    android:layout_toRightOf="@+id/item_invite_listview_ll_richCount"
                    >
                    <ImageView
                        android:layout_width="30px"
                        android:layout_height="match_parent"
                        android:src="@mipmap/meilizhi"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/item_invite_listview_beautyCount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="#f56684"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:textSize="18px"/>
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoRelativeLayout>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.75"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/item_listview_invite_near_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="20px"
                    android:text="(用户未设置签名)"
                    android:layout_gravity="center_vertical"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>