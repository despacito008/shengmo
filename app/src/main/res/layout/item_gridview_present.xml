<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_gridview_present_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        app:layout_heightPercent="11%h"
        app:layout_widthPercent="11%h" />

    <TextView
        android:id="@+id/item_gridview_present_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:textColor="#FFFFFF"
        app:layout_textSizePercent="2%" />

    <TextView
        android:id="@+id/item_gridview_present_dou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#bbbbbb"
        app:layout_textSizePercent="2%" />
</com.zhy.android.percent.support.PercentLinearLayout>