<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/auto_auto"
    android:background="@drawable/item_click_bg_selector"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip">
        <ImageView
            android:id="@+id/item_listview_invite_follow_flag"
            android:layout_width="45px"
            android:layout_height="45px"
            android:src="@mipmap/atweixuanzhong"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            />
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/item_listview_invite_follow_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/morentouxiang"
                android:background="@drawable/item_icon_bg"
                />
            <ImageView
                android:id="@+id/item_listview_invite_follow_hongiang"
                android:layout_width="30px"
                android:layout_height="30px"
                android:src="@mipmap/qian"
                android:visibility="invisible"
                />
            <ImageView
                android:id="@+id/item_listview_invite_follow_vip"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/vip"
                android:visibility="invisible"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="100px"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_listview_invite_follow_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26px"
                    android:textColor="#333333"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical"
                    />

                <ImageView
                    android:id="@+id/item_listview_invite_follow_shiming"
                    android:layout_width="25px"
                    android:layout_height="20px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dip"
                    android:visibility="invisible"
                    android:src="@mipmap/renzheng"
                    />
                <ImageView
                    android:id="@+id/item_listview_invite_follow_online"
                    android:layout_width="10px"
                    android:layout_height="10px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dip"
                    android:src="@mipmap/lvdian"
                    android:visibility="invisible"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.75"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_listview_invite_follow_Sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:textSize="18px"
                    android:drawableLeft="@mipmap/san"
                    android:drawablePadding="3dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/item_listview_invite_follow_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:textSize="18px"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_vertical"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.75"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_listview_invite_follow_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/item_listview_invite_follow_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>