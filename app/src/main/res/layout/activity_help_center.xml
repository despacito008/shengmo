<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_help_center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="#f5f5f5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.aiwujie.shengmo.activity.HelpCenterActivity">
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="13%w"
        android:background="#FFFFFF"
        >
        <ImageView
            android:id="@+id/mHelp_center_return"
            android:layout_width="40dp"
            app:layout_heightPercent="50%"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:src="@mipmap/return_back"
            android:layout_marginLeft="12dip"
            android:textColor="#4b4b4b"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="帮助中心"
            android:textColor="#333333"
            android:textSize="18dp"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f5f5f5"/>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/mHelp_center_help"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="13%w"
        android:padding="10dp"
        android:background="@drawable/item_click_bg_selector"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="7.5%w"
            app:layout_widthPercent="7.5%w"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/bangzhu"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:textColor="#666666"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            app:layout_textSizePercent="30.5%"
            android:text="使用帮助"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/rightjian"
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical|right"/>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_height="0.5dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="#fff"
            android:layout_height="0.5dp"/>

        <View
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="#f5f5f5"/>

    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/mHelp_center_agreement"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/item_click_bg_selector"
        app:layout_heightPercent="13%w"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="7.5%w"
            app:layout_widthPercent="7.5%w"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/tiaokuan"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:textColor="#666666"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            app:layout_textSizePercent="30.5%"
            android:text="用户条款"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/rightjian"
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical|right"/>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_height="0.5dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="#fff"
            android:layout_height="0.5dp"/>

        <View
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="#f5f5f5"/>

    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/mHelp_center_guifan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/item_click_bg_selector"
        app:layout_heightPercent="13%w"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="7.5%w"
            app:layout_widthPercent="7.5%w"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/kefuzhongxin"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:textColor="#666666"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            app:layout_textSizePercent="30.5%"
            android:text="图文规范"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/rightjian"
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical|right"/>
    </com.zhy.android.percent.support.PercentLinearLayout>


    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_height="0.5dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="#fff"
            android:layout_height="0.5dp"/>

        <View
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="#f5f5f5"/>

    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/mHelp_center_secret"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/item_click_bg_selector"
        app:layout_heightPercent="13%w"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="7.5%w"
            app:layout_widthPercent="7.5%w"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/kefuzhongxin"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:textColor="#666666"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            app:layout_textSizePercent="30.5%"
            android:text="隐私协议"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/rightjian"
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical|right"/>
    </com.zhy.android.percent.support.PercentLinearLayout>


    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_height="0.5dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="#fff"
            android:layout_height="0.5dp"/>

        <View
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="#f5f5f5"/>

    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/mHelp_center_contact"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/item_click_bg_selector"
        app:layout_heightPercent="13%w"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="7.5%w"
            app:layout_widthPercent="7.5%w"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/lianxiwomen"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:textColor="#666666"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            app:layout_textSizePercent="30.5%"
            android:text="联系我们"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/rightjian"
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical|right"/>
    </com.zhy.android.percent.support.PercentLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f5f5f5"/>
</com.zhy.android.percent.support.PercentLinearLayout>
