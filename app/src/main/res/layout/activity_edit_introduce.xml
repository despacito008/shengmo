<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F8F8"
    android:fitsSystemWindows="true"
    tools:context="com.aiwujie.shengmo.activity.EditIntroduceActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="13%w"
        android:background="#FFFFFF"
        >
        <ImageView
            android:id="@+id/mEdit_introduce_return"
            android:layout_width="40dp"
            app:layout_heightPercent="50%"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:src="@mipmap/return_back"
            android:layout_marginLeft="12dip"
            android:textColor="#4b4b4b"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改签名"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            app:layout_textSizePercent="35%"/>
        <TextView
            android:id="@+id/mEdit_introduce_Tijiao"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="提交"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dip"
            android:gravity="center_vertical"
            app:layout_textSizePercent="30%"
            android:textColor="#4b4b4b"
            />
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"/>
    <EditText
        android:id="@+id/mEdit_introduce_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textCursorDrawable="@null"
        android:gravity="top"
        android:padding="10dp"
        android:background="@drawable/item_edittext_bg"
        android:lines="15"
        android:hint="请勿使用露骨的项目词汇、大尺度文字描述、有偿收费描述、多人夫妻描述等！十一年圣魔来之不易，需要同好们的共同呵护~"
        android:maxLength="500"
        app:layout_textSizePercent="2.5%"
        />
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/mEdit_introduce_guifan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图文规范"
            android:layout_marginLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="5dp"
            app:layout_textSizePercent="4%"
            android:textColor="@color/purple_main"
            />
        <TextView
            android:id="@+id/mEdit_introduce_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="256"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:gravity="right|center_vertical"
            />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="12sp"
        android:layout_marginRight="20dp"
        android:text="SVIP签名可由256字升级为500字"
        />

</com.zhy.android.percent.support.PercentLinearLayout>
