<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        tools:layout_height="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.aiwujie.shengmo.kt.ui.view.AdvertisementView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:background="#6cf"
            android:id="@+id/ad_view_group"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="1"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="750:172"/>

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:visibility="visible"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/layout_normal_search"
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_group_rule"
            android:gravity="center"
            android:paddingVertical="3dp"
            android:paddingHorizontal="5dp"
            android:background="@drawable/border_group_claim"
            android:includeFontPadding="false"
            android:textColor="@color/purple_main"
            android:text="@string/group_rule"
            android:lineSpacingMultiplier="0.8"
            android:textSize="8dp"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</LinearLayout>