<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_click_bg_selector"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_heightPercent="12%h"
        android:paddingLeft="10dip"
        android:paddingRight="10dip">
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/item_gzfshy_listview_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/morentouxiang"
                android:background="@drawable/item_icon_bg"
                />
            <ImageView
                android:id="@+id/item_gzfshy_listview_hongiang"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="30%h"
                app:layout_widthPercent="30%h"
                android:src="@mipmap/qian"
                android:visibility="invisible"
                />
            <ImageView
                android:id="@+id/item_gzfshy_listview_vip"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/vip"
                android:visibility="invisible"
                />
            <ImageView
                android:id="@+id/item_gzfshy_listview_online"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_online"
                android:layout_alignParentRight="true"
                android:visibility="invisible"
                tools:visibility="visible"
                />
        </com.zhy.android.percent.support.PercentRelativeLayout>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="9"
            app:layout_heightPercent="75%h"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_gzfshy_listview_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#131415"
                    android:maxLength="10"
                    tools:text="1111"
                    android:textSize="14dp"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical"
                    />

                <ImageView
                    android:id="@+id/item_gzfshy_listview_shiming"
                    android:layout_width="19dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dip"
                    android:src="@drawable/ic_zipai"
                    android:visibility="invisible"
                    app:layout_heightPercent="50%h"
                    app:layout_widthPercent="60%h" />

            </com.zhy.android.percent.support.PercentLinearLayout>
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.75"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_gzfshy_listview_Sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    app:layout_textSizePercent="50%"
                    android:drawableLeft="@mipmap/san"
                    android:drawablePadding="3dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/item_gzfshy_listview_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    app:layout_textSizePercent="50%"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_vertical"
                    />
                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/item_dynamic_listview_ll_richCount"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_heightPercent="80%h"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/item_caifuzhi_bg"
                    android:layout_marginRight="5dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        app:layout_widthPercent="110%h"
                        android:layout_height="match_parent"
                        android:src="@mipmap/caifuzhi"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/item_dynamic_listview_richCount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="111"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:textColor="#febf3b"
                        app:layout_textSizePercent="62%h"/>
                </com.zhy.android.percent.support.PercentLinearLayout>
                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/item_dynamic_listview_ll_beautyCount"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_heightPercent="80%h"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/item_meilizhi_bg"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        app:layout_widthPercent="110%h"
                        android:layout_height="match_parent"
                        android:src="@mipmap/meilizhi"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/item_dynamic_listview_beautyCount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="111"
                        android:textColor="#f56684"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        app:layout_textSizePercent="62%h"/>
                </com.zhy.android.percent.support.PercentLinearLayout>
            </com.zhy.android.percent.support.PercentLinearLayout>
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.75"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_gzfshy_listview_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_999"
                    android:textSize="11dp"
                    android:singleLine="true"
                    tools:text=""
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/item_gzfshy_listview_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/gray_999"
                    android:textSize="11dp"
                    tools:text="2333"
                    android:layout_gravity="center_vertical"
                    />
            </com.zhy.android.percent.support.PercentLinearLayout>
        </com.zhy.android.percent.support.PercentLinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/ll_reward"
            android:orientation="vertical"
           >
            <LinearLayout
                android:id="@+id/ll_present"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/item_gzfshy_listview_present"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    tools:src="@mipmap/presentnew01"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:id="@+id/item_gzfshy_listview_presentCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="12dp"
                    android:lines="1"
                    tools:text="xxx"
                    android:layout_marginRight="5dp"
                    android:textColor="#666666"/>
                <TextView
                    android:id="@+id/item_gzfshy_listview_modou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="12dp"
                    android:textColor="#b73acb"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/item_gzfshy_listview_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_below="@+id/ll_present"
                android:layout_marginTop="10dp"
                android:src="@drawable/jiaguanzhu" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_tuiding"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/iv_tuiding"
                android:layout_width="35dp"
                android:layout_height="41dp"
                android:src="@drawable/ic_dynamic_detail_rocket"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/iv_tuiding"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="12dp"
                    tools:text="1111"
                    android:layout_marginRight="5dp"
                    android:textColor="#FF7857"/>
                <TextView
                    android:id="@+id/item_tv_add_charm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="＋100魅力值"
                    android:textSize="12dp"
                    android:layout_marginRight="5dp"
                    android:textColor="#FF7857"/>
                <ImageView
                    android:id="@+id/item_attention_state"
                    android:layout_height="20dp"
                    android:layout_width="55dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/jiaguanzhu"
                    />
            </LinearLayout>

        </RelativeLayout>


    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>