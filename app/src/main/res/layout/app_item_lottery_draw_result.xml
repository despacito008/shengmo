<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_marginVertical="3.5dp"
        android:id="@+id/iv_item_lottery_draw_result_bg"
        android:src="@drawable/ic_item_lottery_draw"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <ImageView
        android:id="@+id/iv_item_lottery_draw_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:src="@mipmap/presentnew01"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintDimensionRatio="1"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/tv_item_lottery_draw_name"
        android:textSize="12dp"
        tools:text="棒棒糖"
        android:textColor="@color/titleBlack"
        app:layout_constraintTop_toBottomOf="@id/iv_item_lottery_draw_icon"
        app:layout_constraintLeft_toLeftOf="@id/iv_item_lottery_draw_icon"
        app:layout_constraintRight_toRightOf="@id/iv_item_lottery_draw_icon"
        app:layout_constraintBottom_toTopOf="@id/tv_item_lottery_draw_bean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_item_lottery_draw_bean"
        android:textSize="12dp"
        tools:text="2魔豆"
        android:textColor="@color/titleBlack"
        app:layout_constraintTop_toTopOf="@id/iv_item_lottery_draw_result_bg"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_lottery_draw_result_bg"
        app:layout_constraintLeft_toLeftOf="@id/iv_item_lottery_draw_icon"
        app:layout_constraintRight_toRightOf="@id/iv_item_lottery_draw_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_item_lottery_draw_count"
        tools:text="10"
        android:textColor="#9301fb"
        app:layout_constraintRight_toRightOf="@id/iv_item_lottery_draw_result_bg"
        app:layout_constraintTop_toTopOf="@id/iv_item_lottery_draw_result_bg"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/iv_item_lottery_draw_result_bg"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_lottery_draw_result_bg"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintVertical_bias="0.05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>