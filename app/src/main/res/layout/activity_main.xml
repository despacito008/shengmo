<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.aiwujie.shengmo.customview.MyViewpager
        android:id="@+id/mMain_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <TextView
        android:id="@+id/mMain_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e5e5e5"
        android:layout_above="@+id/mMain_lltabs"/>

    <FrameLayout
        android:id="@+id/mMain_lltabs"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
          >
            <RadioGroup
                android:id="@+id/mMain_rg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <RadioButton
                    android:id="@+id/mMmain_rb02"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:layout_weight="1"
                    android:text="身边"
                    android:drawableTop="@drawable/rb_side_selector"
                    android:textColor="@drawable/item_text_tabs_bg"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:checked="true"
                    />

                <RadioButton
                    android:id="@+id/mMmain_rb04"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:layout_weight="1"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:drawablePadding="1dp"
                    android:drawableTop="@drawable/rb_dynamic_selector"
                    android:textColor="@drawable/item_text_tabs_bg"
                    android:text="动态"
                    android:textSize="10dp"
                    android:gravity="center"
                    />

                <RadioButton
                    android:id="@+id/mMmain_rb03"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:layout_weight="1"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:drawablePadding="1dp"
                    android:drawableTop="@drawable/rb_message_selector"
                    android:textColor="@drawable/item_text_tabs_bg"
                    android:text="消息"
                    android:textSize="10dp"
                    android:gravity="center"
                    />


                <RadioButton
                    android:id="@+id/mMmain_rb01"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:layout_weight="1"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:drawablePadding="1dp"
                    android:text="直播"
                    android:drawableTop="@drawable/rb_live_selector"
                    android:textSize="10dp"
                    android:textColor="@drawable/item_text_tabs_bg"
                    android:gravity="center"

                    />
                <RadioButton
                    android:id="@+id/mMmain_rb05"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:layout_weight="1"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:drawablePadding="1dp"
                    android:drawableTop="@drawable/rb_my_selector"
                    android:textColor="@drawable/item_text_tabs_bg"
                    android:text="我的"
                    android:textSize="10dp"
                    android:gravity="center"
                    />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mMain_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    tools:visibility="visible"
                    android:id="@+id/mMain_DiscoveryRedPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="3dp"
                    android:minWidth="13dp"
                    android:textSize="10sp"
                    android:visibility="gone"
                    android:gravity="center"
                    tools:text="9"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/item_messagecount_bg"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="15dp"
                    />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    tools:visibility="visible"
                    android:id="@+id/mMain_DynamicRedPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="3dp"
                    android:minWidth="13dp"
                    android:textSize="10sp"
                    android:visibility="gone"
                    android:gravity="center"
                    tools:text="9"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/item_messagecount_bg"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="15dp"
                    />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    tools:visibility="visible"
                    android:id="@+id/mMain_messageCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="3dp"
                    android:minWidth="13dp"
                    android:textSize="10sp"
                    android:visibility="gone"
                    android:gravity="center"
                    tools:text="9"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/item_messagecount_bg"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="15dp"
                    />

            </FrameLayout>


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/mMain_NearRedPoint"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_heightPercent="11%w"
                    app:layout_widthPercent="11%w"
                    app:layout_marginTopPercent="3.5%w"
                    android:textSize="10sp"
                    android:visibility="gone"
                    android:gravity="center"
                    android:background="@drawable/item_messagecount_bg"
                    android:textColor="#FFFFFF"
                    app:layout_marginLeftPercent="48%w"
                    />

                <TextView
                    tools:visibility="visible"
                    android:id="@+id/mMain_dynamicCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="3dp"
                    android:minWidth="13dp"
                    android:textSize="10sp"
                    android:visibility="gone"
                    android:gravity="center"
                    tools:text="9"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/item_messagecount_bg"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="15dp"
                    />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/mMain_MyRedPoint"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_heightPercent="11%w"
                    app:layout_widthPercent="11%w"
                    app:layout_marginTopPercent="3.5%w"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:background="@drawable/item_messagecount_bg"
                    android:textColor="#FFFFFF"
                    app:layout_marginLeftPercent="58%w"
                    />
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
