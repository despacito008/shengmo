<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="15%h"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        >
        <ImageView
            android:id="@+id/iv_bank_type"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="15%w"
            app:layout_widthPercent="15%w"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/yinlian"/>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/item_listview_bankcard_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="持卡人"
                android:textColor="#333333"/>
            <TextView
                android:id="@+id/item_listview_bankcard_bankname"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="银行名称"
                android:textColor="#333333"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"/>
            <TextView
                android:id="@+id/item_listview_bankcard_card"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="银行卡号"
                android:textColor="#333333"/>
        </LinearLayout>

        <ImageView
            android:visibility="gone"
            tools:visibility="gone"
            android:id="@+id/iv_bank_is_default"
            android:src="@drawable/check_box_selected"
            android:layout_width="50dp"
            android:layout_height="25dp"/>

        <TextView
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:gravity="bottom"
            android:text="长按编辑"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>