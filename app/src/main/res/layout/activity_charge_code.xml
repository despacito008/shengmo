<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_charge_code"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.aiwujie.shengmo.activity.binding.ChargeCodeActivity">
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="13%w"
        android:background="#FFFFFF"
        >
        <ImageView
            android:id="@+id/mChargeCode_return"
            android:layout_width="40dp"
            app:layout_heightPercent="50%"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:src="@mipmap/return_back"
            android:layout_marginLeft="12dip"
            android:textColor="#4b4b4b"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="验证原手机号"
            android:textColor="#333333"
            app:layout_textSizePercent="35%"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dddddd"/>
    <TextView
        android:id="@+id/mChargeCode_oldmobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textColor="#333333"
        app:layout_textSizePercent="4%w"
        android:text="您的原手机是："/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:textColor="#333333"
        app:layout_textSizePercent="4%w"
        android:text="会收到一条含有4位数字验证码的短信"/>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="7.5%"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dip"
        >
        <EditText
            android:id="@+id/mChargeCode_etPicVercode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textCursorDrawable="@null"
            android:layout_weight="7"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:paddingLeft="10dip"
            android:textColorHint="#B7B7B7"
            android:textColor="#333333"
            android:textSize="13sp"
            android:hint="请输入右侧验证码"
            android:background="@drawable/item_mobile_bg_hui"/>

        <ImageView
            android:id="@+id/mChargeCode_picVercode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:layout_weight="4"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@mipmap/default_error" />
    </com.zhy.android.percent.support.PercentLinearLayout>
    <EditText
        android:id="@+id/mChargeCode_vercode"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="13%w"
        android:textCursorDrawable="@null"
        android:inputType="number"
        android:paddingLeft="10dip"
        android:textColorHint="#B7B7B7"
        android:textColor="#333333"
        android:gravity="center_vertical"
        app:layout_textSizePercent="4%w"
        android:hint="请输入验证码"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/item_mobile_bg_hui"/>
    <Button
        android:id="@+id/mChargeCode_btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="确定"
        android:textColor="#FFFFFF"
        app:layout_textSizePercent="4%w"
        android:background="@drawable/item_login_btn2"/>
    <Button
        android:id="@+id/mChargeCode_reVercode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="点击发送验证码"
        android:textColor="#FFFFFF"
        app:layout_textSizePercent="4%w"
        android:background="@drawable/item_login_btn2"/>
</com.zhy.android.percent.support.PercentLinearLayout>
