<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.aiwujie.shengmo.activity.MapFindActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/mMap_find_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_heightPercent="13%w"
        android:background="#FFFFFF"
        >
        <ImageView
            android:id="@+id/mMap_find_return"
            android:layout_width="40dp"
            app:layout_heightPercent="50%"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:src="@mipmap/return_back"
            android:layout_marginLeft="12dip"
            android:textColor="#4b4b4b"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地图找人"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            app:layout_textSizePercent="35%"/>
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            app:layout_widthPercent="6.5%">

            <ImageView
                android:id="@+id/mNear_Sx"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/item_near_filter_selector"
                android:layout_centerVertical="true"
                android:visibility="visible"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <TextView
        android:id="@+id/mMap_find_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"
        android:layout_below="@+id/mMap_find_title"/>
    <com.handmark.pulltorefresh.library.PullToRefreshGridView
        android:id="@+id/mMap_find_Gridview"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:horizontalSpacing="1dp"
        android:numColumns="1"
        android:layout_marginTop="1dip"
        android:verticalSpacing="1dp"
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        ptr:ptrHeaderTextColor="#FFFFFF"
        ptr:ptrDrawable="@mipmap/loading"
        ptr:ptrScrollingWhileRefreshingEnabled="true"
        android:layout_below="@+id/mMap_find_line"
        android:layout_above="@+id/mMap_find_addrdetail"
        />
    <TextView
        android:id="@+id/mMap_find_addrdetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#F9f9f9"
        android:textColor="#333333"
        android:drawableLeft="@mipmap/addrdingwei"
        android:paddingLeft="5dp"
        android:textSize="13sp"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        />
</com.zhy.android.percent.support.PercentRelativeLayout>
