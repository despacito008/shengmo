<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aiwujie.shengmo.activity.SendredbaoChatroomActivity">

    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/backya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发红包"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/yuan_white_shape"
        android:layout_marginTop="40dp"
        android:padding="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总金额"
            android:textColor="#000"
            android:layout_gravity="center"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/zong_doudou"
            android:layout_width="0dp"
            android:singleLine="true"
            android:background="@null"
            android:textColor="#000"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0.00"
            android:gravity="right"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金魔豆"
            android:textColor="#000"
            android:layout_gravity="center"
            android:padding="10dp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:background="@drawable/yuan_white_shape"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="红包个数"
            android:textColor="#000"
            android:layout_gravity="center"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/num_doudou"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="填写个数"
            android:textColor="#000"
            android:singleLine="true"
            android:background="@null"
            android:layout_gravity="center"
            android:gravity="right"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个"
            android:textColor="#000"
            android:layout_gravity="center"
            android:padding="10dp"/>


    </LinearLayout>

    <EditText
        android:id="@+id/et_message"
        android:background="@drawable/yuan_white_shape"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:hint="恭喜发财，大吉大利">


    </EditText>

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="群聊红包平均不低于10魔豆"/>


    <Button
        android:id="@+id/send_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="#fff"
        android:textSize="16sp"
        android:background="@drawable/yuan_red_shape"
        android:layout_marginTop="80dp"
        android:text="塞魔豆进红包"/>

</LinearLayout>
