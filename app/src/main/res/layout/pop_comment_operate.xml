<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_top_round_white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_pop_comment_operate_copy"
        android:text="复制"
        android:textColor="@color/darkGray"
        android:textSize="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <View
        android:background="@color/gray_color"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <TextView
        android:id="@+id/tv_pop_comment_operate_report"
        android:text="举报"
        android:textColor="@color/darkGray"
        android:textSize="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <View
        android:background="@color/gray_color"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <TextView
        android:id="@+id/tv_pop_comment_operate_delete"
        android:text="删除"
        android:textColor="@color/darkGray"
        android:textSize="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <View
        android:background="@color/gray_color"
        android:layout_width="match_parent"
        android:layout_height="5px"/>

    <TextView
        android:id="@+id/tv_pop_comment_operate_cancel"
        android:text="取消"
        android:textColor="@color/darkGray"
        android:textSize="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

</LinearLayout>