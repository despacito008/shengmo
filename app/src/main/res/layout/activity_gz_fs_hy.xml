<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"
    tools:context="com.aiwujie.shengmo.activity.GzFsHyActivity">
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_heightPercent="13%w"
        android:background="#FFFFFF"
        >
        <ImageView
            android:id="@+id/mSee_return"
            android:layout_width="50dp"
            app:layout_heightPercent="80%"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:layout_marginLeft="3dp"
            android:src="@mipmap/return_back"
            />
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="35"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_marginLeftPercent="5%w"
            app:layout_marginRightPercent="5%w"
            >
            <com.zhy.android.percent.support.PercentRelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/mGzFsHy_gz"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="关注"
                    app:layout_marginRightPercent="3%"
                    android:layout_centerInParent="true"
                    android:textColor="@drawable/item_home_text_selector"
                    android:gravity="center"
                    app:layout_textSizePercent="35%"
                    />
                <ImageView
                    android:id="@+id/mGzFsHy_gz_dian"
                    android:layout_width="15dp"
                    android:layout_height="4dp"
                    android:layout_marginBottom="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_user_info_sex_cdts"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    />
            </com.zhy.android.percent.support.PercentRelativeLayout>
            <com.zhy.android.percent.support.PercentRelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/mGzFsHy_fs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="粉丝"
                    android:gravity="center"
                    app:layout_marginLeftPercent="3%"
                    android:layout_centerInParent="true"
                    android:textColor="@drawable/item_home_text_selector"
                    app:layout_textSizePercent="35%"
                    />
                <ImageView
                    android:id="@+id/mGzFsHy_fs_dian"
                    android:layout_width="15dp"
                    android:layout_height="4dp"
                    android:layout_marginBottom="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_user_info_sex_cdts"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    />
            </com.zhy.android.percent.support.PercentRelativeLayout>
            <com.zhy.android.percent.support.PercentRelativeLayout
                android:id="@+id/mGzFsHy_hy_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/mGzFsHy_hy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="好友"
                    android:gravity="center"
                    app:layout_marginLeftPercent="3%"
                    android:layout_centerInParent="true"
                    android:textColor="@drawable/item_home_text_selector"
                    app:layout_textSizePercent="35%"
                    />
                <ImageView
                    android:id="@+id/mGzFsHy_hy_dian"
                    android:layout_width="15dp"
                    android:layout_height="4dp"
                    android:layout_marginBottom="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_user_info_sex_cdts"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    />
            </com.zhy.android.percent.support.PercentRelativeLayout>

            <com.zhy.android.percent.support.PercentRelativeLayout
                android:id="@+id/mGzFsHy_hy_bq"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/mGzFsHy_bq"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="分组"
                    android:gravity="center"
                    app:layout_marginLeftPercent="3%"
                    android:layout_centerInParent="true"
                    android:textColor="@drawable/item_home_text_selector"
                    app:layout_textSizePercent="35%"
                    />
                <ImageView
                    android:id="@+id/mGzFsHy_biaoqian"
                    android:layout_width="15dp"
                    android:layout_height="4dp"
                    android:layout_marginBottom="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_user_info_sex_cdts"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    />
            </com.zhy.android.percent.support.PercentRelativeLayout>
        </com.zhy.android.percent.support.PercentLinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_labeldefaults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:visibility="gone"
                android:padding="5dp"
                android:textSize="14sp"
                android:layout_gravity="center"/>

        </LinearLayout>



    </com.zhy.android.percent.support.PercentLinearLayout>
    <!--<TextView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0.5dp"-->
    <!--android:background="#dddddd"/>-->
    <android.support.v4.view.ViewPager
        android:id="@+id/mGzFsHy_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        ></android.support.v4.view.ViewPager>
</com.zhy.android.percent.support.PercentLinearLayout>
