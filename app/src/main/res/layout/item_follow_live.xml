<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="30%w"
        app:layout_widthPercent="30%w">

        <ImageView
            android:id="@+id/live_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/maipai" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#70000000"
            android:gravity="center"
            android:text="已结束"
            android:textColor="@color/white" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/live_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:text="name"
            app:layout_textSizePercent="9%w"/>
        <TextView
            android:id="@+id/audience_num"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="历史最高26人观看"
            android:gravity="center_vertical"
            android:layout_weight="30"
            app:layout_textSizePercent="7%w"/>
        <TextView
            android:id="@+id/live_time"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="name"
            android:gravity="bottom"
            android:layout_weight="30"
            app:layout_textSizePercent="7%w"/>
    </com.zhy.android.percent.support.PercentLinearLayout>


</com.zhy.android.percent.support.PercentLinearLayout>