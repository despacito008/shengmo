<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:background="@color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        app:layout_constraintDimensionRatio="1"
        android:layout_height="0dp"/>

    <ImageView
        android:id="@+id/iv_item_lottery_draw_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:src="@mipmap/presentnew01"
        app:layout_constraintWidth_percent="0.55"
        app:layout_constraintDimensionRatio="1"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/tv_item_lottery_draw_name"
        android:textSize="12dp"
        tools:text="棒棒糖"
        android:textColor="@color/titleBlack"
        app:layout_constraintTop_toBottomOf="@id/iv_item_lottery_draw_icon"
        app:layout_constraintLeft_toLeftOf="@id/iv_item_lottery_draw_icon"
        app:layout_constraintRight_toRightOf="@id/iv_item_lottery_draw_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_item_lottery_draw_bean"
        android:textSize="12dp"
        tools:text="2魔豆"
        android:textColor="@color/titleBlack"
        app:layout_constraintTop_toBottomOf="@id/tv_item_lottery_draw_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/iv_item_lottery_draw_icon"
        app:layout_constraintRight_toRightOf="@id/iv_item_lottery_draw_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>