<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aiwujie.shengmo.activity.SearchActivity"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="13%w"
        android:background="#FFFFFF"
        >
        <ImageView
            android:id="@+id/mSearch_return"
            android:layout_width="40dp"
            app:layout_heightPercent="50%"
            android:layout_height="0dp"
            android:text="@string/regist"
            android:gravity="center_vertical"
            android:src="@mipmap/return_back"
            android:layout_marginLeft="12dip"
            android:textColor="#4b4b4b"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索用户"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            app:layout_textSizePercent="35%"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"/>
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="12%w"
        android:background="#F4F4F4"
        >
        <ImageView
            android:id="@+id/mSearch_iv_search"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            app:layout_heightPercent="60%"
            android:src="@mipmap/sousuokuangbai"
            android:scaleType="fitXY"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="5%"
            />
        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/mSearch_et_llSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone"
            >
            <EditText
                android:id="@+id/mSearch_et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:textCursorDrawable="@null"
                android:drawablePadding="10dp"
                android:padding="5dp"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:hint="搜索"
                android:textSize="14sp"
                android:drawableLeft="@mipmap/sousuo"
                app:layout_heightPercent="65%"
                android:src="@mipmap/shousuoiv"
                android:background="@drawable/item_search_white_bg"
                android:scaleType="fitXY"
                app:layout_marginLeftPercent="5%"
                app:layout_marginRightPercent="5%"
                />
        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <include
        android:visibility="gone"
        layout="@layout/layout_normal_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/mSearch_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/mMyBlackList_line"
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        ptr:ptrHeaderTextColor="#FFFFFF"
        ptr:ptrDrawable="@mipmap/loading"
        ptr:ptrScrollingWhileRefreshingEnabled="true"
        android:dividerHeight="1dp"
        android:divider="#fff"
        >
    </com.handmark.pulltorefresh.library.PullToRefreshListView>

</com.zhy.android.percent.support.PercentLinearLayout>
