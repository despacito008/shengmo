<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_or_other_topic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.aiwujie.shengmo.activity.MyOrOtherTopicActivity">
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="13%w"
            android:background="#FFFFFF"
            >
            <ImageView
                android:id="@+id/mMyOrOtherTopic_return"
                android:layout_width="40dp"
                app:layout_heightPercent="50%"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:src="@mipmap/return_back"
                android:layout_marginLeft="12dip"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/mMyOrOtherTopic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参与话题"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:textColor="#333333"
                app:layout_textSizePercent="35%"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>


        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/mFragment_topic_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            xmlns:ptr="http://schemas.android.com/apk/res-auto"
            ptr:ptrHeaderTextColor="#FFFFFF"
            android:divider="#f5f5f5"
            android:dividerHeight="3dp"
            ptr:ptrDrawable="@mipmap/loading"
            ptr:ptrScrollingWhileRefreshingEnabled="true"
            >
        </com.handmark.pulltorefresh.library.PullToRefreshListView>
    </com.zhy.android.percent.support.PercentLinearLayout>
