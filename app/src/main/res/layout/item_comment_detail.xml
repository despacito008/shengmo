<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cl_item_comment_detail"
    android:clickable="true"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_item_comment_detail_head"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintDimensionRatio="1:1"
        tools:background="#6cf"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"/>


    <ImageView
        android:id="@+id/iv_item_comment_detail_sign"
        app:layout_constraintWidth_percent="0.05"
        app:layout_constraintDimensionRatio="1:1"
        tools:background="#c6f"
        app:layout_constraintRight_toRightOf="@id/iv_item_comment_detail_head"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_comment_detail_head"
        android:layout_width="0dp"
        android:layout_height="0dp"/>


    <ImageView
        android:id="@+id/iv_item_comment_detail_thumb_up"
        app:layout_constraintWidth_percent="0.05"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginRight="5dp"
        tools:src="@drawable/thumb_up_done"
        android:layout_marginTop="2dp"
        app:layout_constraintRight_toLeftOf="@id/tv_item_comment_detail_thumb_up"
        app:layout_constraintTop_toTopOf="@id/tv_item_comment_detail_thumb_up"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_comment_detail_thumb_up"
        android:layout_width="0dp"
        android:layout_height="0dp"/>


    <TextView
        android:layout_marginTop="2dp"
        android:layout_marginRight="10dp"
        android:includeFontPadding="true"
        android:textColor="@color/darkGray"
        android:id="@+id/tv_item_comment_detail_thumb_up"
        app:layout_constraintHorizontal_bias="0.9"
        tools:text="99"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_item_comment_detail_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:textSize="16dp"
        android:id="@+id/tv_item_comment_detail_name"
        android:layout_marginHorizontal="10dp"
        tools:text="满天飞雨"
        android:textColor="@color/purple_main"
        app:layout_constraintTop_toTopOf="@id/iv_item_comment_detail_head"
        app:layout_constraintLeft_toRightOf="@id/iv_item_comment_detail_head"
        app:layout_constraintRight_toLeftOf="@id/iv_item_comment_detail_thumb_up"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="13dp"
        android:textColor="@color/normalGray"
        android:id="@+id/tv_item_comment_detail_date"
        tools:text="2021-3-27"
        app:layout_constraintTop_toBottomOf="@id/tv_item_comment_detail_name"
        app:layout_constraintLeft_toLeftOf="@id/tv_item_comment_detail_name"
        app:layout_constraintRight_toRightOf="@id/tv_item_comment_detail_name"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_comment_detail_head"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>


    <TextView
        android:background="@drawable/item_normal_bg"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:id="@+id/tv_item_comment_detail_content"
        tools:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
        app:layout_constraintTop_toBottomOf="@id/iv_item_comment_detail_head"
        app:layout_constraintLeft_toLeftOf="@id/tv_item_comment_detail_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>