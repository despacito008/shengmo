<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_item_fans_club_member"
    android:orientation="horizontal"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:paddingVertical="12dp"
    android:paddingHorizontal="10dp"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_item_rank"
        tools:text="1"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:includeFontPadding="false"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/titleBlack"
        android:layout_width="40dp"
        android:layout_height="wrap_content"/>

    <com.aiwujie.shengmo.view.CircleImageView
        android:layout_marginLeft="10dp"
        android:id="@+id/civ_item_icon"
        tools:src="@mipmap/applogo"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <com.aiwujie.shengmo.view.roundview.RoundLinearLayout
        android:id="@+id/ll_item_club_card"
        android:layout_marginHorizontal="15dp"
        app:rRadius="4dp"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:background="@color/live_gift_orange"
        android:layout_gravity="center"
        android:paddingHorizontal="5dp"
        android:paddingVertical="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_marginRight="1dp"
            android:layout_width="18dp"
            android:layout_height="18dp">

            <ImageView
                android:src="@drawable/ic_fans_heart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_item_fans_level"
                android:textSize="9dp"
                android:textColor="@color/white"
                android:text="10"
                android:includeFontPadding="false"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </FrameLayout>


        <TextView
            android:includeFontPadding="false"
            tools:text="粉丝团"
            android:textStyle="bold"
            android:textSize="10dp"
            android:paddingLeft="2dp"
            android:paddingVertical="1dp"
            android:textColor="@color/white"
            android:id="@+id/tv_item_fans_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </com.aiwujie.shengmo.view.roundview.RoundLinearLayout>

    <TextView
        android:id="@+id/tv_item_name"
        tools:text="海龟先生"
        android:includeFontPadding="false"
        android:textSize="15dp"
        android:textColor="@color/titleBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>