<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dashang_black_bg">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="4%w"
        app:layout_marginBottomPercent="4%w">
        <TextView
            android:id="@+id/dashang_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="送礼物"
            app:layout_textSizePercent="5.5%w"
            android:textColor="#aaFFFFFF"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/dashang_dialog_titletwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="送免费礼物"
            app:layout_textSizePercent="4%w"
            android:textColor="#aaFFFFFF"
            android:paddingTop="3dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:layout_marginRightPercent="4%w"
            />

    </com.zhy.android.percent.support.PercentRelativeLayout>

      <android.support.v4.view.ViewPager
          android:id="@+id/dashang_dialog_viewpager"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_marginHorizontal="12dp"
          app:layout_heightPercent="70%h"
          android:scrollbars="none"/>

    <LinearLayout
        android:id="@+id/dashang_dialog_dot"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal" />
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginBottomPercent="3.5%w">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ranking_beans"
            android:layout_width="wrap_content"
            app:layout_heightPercent="15%h"
            app:layout_marginLeftPercent="4%w"
            android:layout_height="0dp"/>
        <TextView
            android:id="@+id/dashang_dialog_modou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:padding="3dp"
            app:layout_textSizePercent="4.5%w"
            app:layout_marginLeftPercent="7%w"
            />
        <TextView
            android:id="@+id/dashang_dialog_chongzhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值"
            android:textColor="#FFFFFF"
            android:padding="3dp"
            android:alpha="0.6"
            app:layout_textSizePercent="4.5%w"
            app:layout_marginLeftPercent="5%w"
            app:layout_marginRightPercent="7%w"
            android:layout_alignParentRight="true"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:rotation="180"
            android:tint="@color/lightGray"
            android:layout_alignParentRight="true"
            android:src="@drawable/normal_back"
            android:layout_width="wrap_content"
            app:layout_heightPercent="12%h"
            android:layout_height="0dp"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentLinearLayout>