<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_widthPercent="80%"
        android:background="@drawable/item_edittext_bg"
        android:paddingTop="25dp"
       >
        <TextView
            android:id="@+id/item_open_vip_message"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="8%"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:hint="需要成为会员才可以继续使用哦~"
            android:textColor="#333333"
            app:layout_textSizePercent="2.6%"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eff0f2"
            android:layout_marginTop="10dp"/>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_open_vip_cancel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layout_heightPercent="8.5%"
                android:gravity="center"
                android:textColor="@color/darkGray"
                app:layout_textSizePercent="3%"
                android:textStyle="bold"
                android:text="取消"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="0dp"
                app:layout_heightPercent="7%w"
                android:background="#eff0f2"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/item_open_vip_follow"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="8.5%"
                android:layout_weight="1"
                android:gravity="center"
                app:layout_textSizePercent="3%"
                android:textStyle="bold"
                android:textColor="#b73acb"
                android:text="加好友"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="0dp"
                app:layout_heightPercent="7%w"
                android:background="#eff0f2"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/item_open_vip_buy"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="8.5%"
                android:layout_weight="1"
                android:gravity="center"
                app:layout_textSizePercent="3%"
                android:textStyle="bold"
                android:textColor="#b73acb"
                android:text="开通VIP"/>
        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>