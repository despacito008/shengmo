<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f8f8f8"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.aiwujie.shengmo.activity.ContactUsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF">
        <ImageView
            android:id="@+id/mContact_return"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:rotation="180"
            android:paddingVertical="5dp"
            android:paddingHorizontal="15dp"
            android:src="@drawable/arrow_right"
            android:layout_marginLeft="5dp"
            android:textColor="#4b4b4b"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="联系我们"
            android:textColor="#333333"
            android:textSize="18dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F8F8F8"/>
    <LinearLayout
        android:id="@+id/mContact_ll_SmQQ"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:text="客服QQ"/>
        <TextView
            android:id="@+id/mContact_SmQQ"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:gravity="right"
            android:textColor="#b73acb"
            android:layout_gravity="center_vertical"
            tools:text="619885516"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:layout_marginRight="5dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F8F8F8"/>
    <LinearLayout
        android:id="@+id/mContact_ll_SmWeChat"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:text="客服微信"/>
        <TextView
            android:id="@+id/mContact_SmWeChat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:gravity="right"
            android:textColor="#b73acb"
            android:layout_gravity="center_vertical"
            tools:text="619885516"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:layout_marginRight="5dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F8F8F8"/>
    <LinearLayout
        android:id="@+id/mContact_ll_mobile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:text="客服电话"/>
        <TextView
            android:id="@+id/mContact_mobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:gravity="right"
            android:textColor="#b73acb"
            android:layout_gravity="center_vertical"
            tools:text="13436537298"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F8F8F8"/>
    <LinearLayout
        android:id="@+id/mContact_ll_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:text="客服邮箱"/>
        <TextView
            android:id="@+id/mContact_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:gravity="right"
            android:textColor="#b73acb"
            android:layout_gravity="center_vertical"
            tools:text="619885516@qq.com"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F8F8F8"/>
    <LinearLayout
        android:id="@+id/mContact_ll_public_num"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:text="公众号"/>
        <TextView
            android:id="@+id/mContact_public_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:gravity="right"
            android:textColor="#b73acb"
            android:layout_gravity="center_vertical"
            tools:text="圣魔APP"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F8F8F8"/>
    <LinearLayout
        android:id="@+id/mContact_ll_weiBo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:text="微博"/>
        <TextView
            android:id="@+id/mContact_weiBo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:gravity="right"
            android:textColor="#b73acb"
            android:layout_gravity="center_vertical"
            tools:text="圣魔APP"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F8F8F8"/>
    <LinearLayout
        android:id="@+id/mContact_ll_net"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:text="网址"/>
        <TextView
            android:id="@+id/mContact_net"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:gravity="right"
            android:textColor="#b73acb"
            android:layout_gravity="center_vertical"
            tools:text="www.shengmo.cn"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>

</LinearLayout>
