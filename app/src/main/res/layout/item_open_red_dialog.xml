<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <android.support.constraint.ConstraintLayout
       android:id="@+id/cl_red_bao_bg"
       android:layout_width="360dp"
       android:layout_height="640dp"
       android:background="@drawable/red_bao_beijing">

      <ImageView
       android:id="@+id/iv_red_bao_icon"
       tools:background="#6cf"
       app:layout_constraintVertical_bias="0.27"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       android:layout_width="40dp"
       android:layout_height="40dp"/>

      <TextView
          tools:text="iiccer"
          android:id="@+id/tv_red_bao_name"
          app:layout_constraintVertical_bias="0.33"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:textColor="#FEE4CE"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>

      <TextView
          android:id="@+id/tv_red_bao_info"
          android:text="给您送了一个红包"
          app:layout_constraintVertical_bias="0.38"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:textColor="#FEE4CE"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>

      <TextView
          app:layout_constraintVertical_bias="0.5"
          app:layout_constraintLeft_toLeftOf="@id/view_red_bao_kai"
          app:layout_constraintRight_toRightOf="@id/view_red_bao_kai"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:id="@+id/red_miaoshu"
          android:layout_width="0dp"
          android:gravity="center"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:textColor="#FFD086"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:textSize="16sp"
          android:textStyle="bold"
          android:maxLines="3"
          android:text="abcdefghijklmnopqrstuvwxyz"/>

      <ImageView
          app:layout_constraintVertical_bias="0.1"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:visibility="invisible"
          android:id="@+id/iv_cha"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_margin="20dp"
          android:src="@drawable/red_cha"/>

      <ImageView
          app:layout_constraintVertical_bias="0.65"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:id="@+id/iv_red_kai"
          android:layout_width="85dp"
          android:layout_height="85dp"
          android:layout_centerInParent="true"
          android:src="@drawable/red_kai"/>

      <View
          android:id="@+id/view_red_bao_kai"
          app:layout_constraintVertical_bias="0.45"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:layout_width="230dp"
          android:layout_height="320dp"/>

   </android.support.constraint.ConstraintLayout>


</com.zhy.android.percent.support.PercentLinearLayout>