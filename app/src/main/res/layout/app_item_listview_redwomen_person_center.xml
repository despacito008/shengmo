<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_heightPercent="25%w">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            app:layout_heightPercent="18%w"
            app:layout_marginLeftPercent="10%w"
            app:layout_widthPercent="18%w">

            <ImageView
                android:id="@+id/item_listview_redwomen_person_center_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/item_redwomen_icon_bg"
                android:src="@mipmap/morentouxiang" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            app:layout_heightPercent="20%w"
            app:layout_marginLeftPercent="5%w">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_listview_redwomen_person_center_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="麻辣鸡丝麻辣鸡丝"
                    android:textColor="#333333"
                    app:layout_textSizePercent="6.2%w" />

                <ImageView
                    android:id="@+id/item_listview_redwomen_person_center_realname"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/renzheng"
                    app:layout_heightPercent="4%w"
                    app:layout_widthPercent="7%w" />
            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_listview_redwomen_person_center_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/item_sex_nan_bg"
                    android:drawableLeft="@mipmap/nan"
                    android:drawablePadding="4dp"
                    android:paddingLeft="6dp"
                    android:paddingTop="2dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="2dp"
                    android:text="11"
                    android:textColor="#FFFFFF"
                    app:layout_textSizePercent="4%w" />

                <TextView
                    android:id="@+id/item_listview_redwomen_person_center_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/item_sex_nv_bg"
                    android:paddingLeft="6dp"
                    android:paddingTop="2dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="2dp"
                    android:text="M"
                    android:textColor="#FFFFFF"
                    app:layout_textSizePercent="4%w" />

                <TextView
                    android:id="@+id/item_listview_redwomen_person_center_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/item_personmsg_tv_bg"
                    android:drawableLeft="@mipmap/weizhi"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:paddingTop="2dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="2dp"
                    android:text="北京市"
                    android:textColor="#FFFFFF"
                    app:layout_textSizePercent="4%w" />
            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_listview_redwomen_person_center_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="麻辣鸡丝麻辣鸡丝"
                    android:textColor="#333333"
                    app:layout_textSizePercent="5.5%w" />
            </com.zhy.android.percent.support.PercentLinearLayout>
        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_remarks"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_round_white"
            android:elevation="1dp"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp">

            <EditText
                android:id="@+id/item_listview_redwomen_person_center_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@null"
                android:gravity="top"
                android:hint="红娘牵线备注..."
                android:maxLength="300"
                android:scrollbars="vertical"
                android:textColorHint="#ff999999"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="14sp"
            android:text="保存"
            android:textColor="@color/white"
            android:background="@drawable/bg_high_recharge"
            android:layout_gravity="center"/>

    </LinearLayout>



    <ImageView
        android:id="@+id/item_listview_redwomen_person_center_hnjy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:src="@mipmap/hnjy"
        android:visibility="gone"
        app:layout_heightPercent="6%w"
        app:layout_marginRightPercent="5%w"
        app:layout_marginTopPercent="2%w"
        app:layout_widthPercent="6%w" />
</com.zhy.android.percent.support.PercentLinearLayout>