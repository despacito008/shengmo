<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/item_gridview_redwomen_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="95%w"
        app:layout_widthPercent="95%w"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        />
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_widthPercent="95%w"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="#F2F2F2"
        >
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_gridview_redwomen_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="牵线用户"
                app:layout_textSizePercent="8%w"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/item_gridview_redwomen_renzheng"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                app:layout_heightPercent="5.5%w"
                app:layout_widthPercent="9.5%w"
                android:src="@mipmap/renzheng"
                />
        </com.zhy.android.percent.support.PercentLinearLayout>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">
            <TextView
                android:id="@+id/item_gridview_redwomen_Sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_textSizePercent="5.3%w"
                android:drawableLeft="@mipmap/nan"
                android:drawablePadding="3dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/item_gridview_redwomen_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_textSizePercent="5.3%w"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/item_gridview_redwomen_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_textSizePercent="5.3%w"
                android:drawableLeft="@mipmap/weizhi"
                android:gravity="center_vertical"
                android:drawablePadding="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="5dp"
                android:background="@drawable/item_personmsg_tv_bg"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                />
        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>