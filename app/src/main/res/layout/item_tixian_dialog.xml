<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_widthPercent="80%"
        android:background="@drawable/item_edittext_bg"
        android:paddingTop="25dp"
       >
        <TextView
            android:id="@+id/item_tixian_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:layout_textSizePercent="2.5%"
            android:gravity="center"
            android:textColor="#333333"
            android:textCursorDrawable="@null"
            android:text="提现金额:10元"
            />
        <TextView
            android:id="@+id/item_tixian_modou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:layout_textSizePercent="2.5%"
            android:textCursorDrawable="@null"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:textColor="#333333"
            android:text="剩余魔豆:10个"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eff0f2"
            android:layout_marginTop="10dp"/>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_tixian_confirm"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layout_heightPercent="8.5%"
                android:gravity="center"
                app:layout_textSizePercent="3%"
                android:textColor="#b73acb"
                android:textStyle="bold"
                android:text="确定"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="0dp"
                app:layout_heightPercent="8.5%"
                android:background="#eff0f2"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/item_tixian_cancel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="8.5%"
                android:layout_weight="1"
                android:gravity="center"
                app:layout_textSizePercent="3%"
                android:textStyle="bold"
                android:textColor="#b73acb"
                android:text="取消"/>
        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>