<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.aiwujie.shengmo.view.roundview.RoundLinearLayout
        app:rRadius="10dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.7"
        android:gravity="center"
        android:background="@drawable/bg_round_live_red_envelopes_bg"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:paddingVertical="20dp"
            android:text="发红包"
            android:gravity="center"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/ic_send_red_envelopes_top_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:padding="5dp"
            android:background="@drawable/yuan_white_shape"
            android:layout_marginHorizontal="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="红包个数"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_gravity="center"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/num_doudou"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="0"
                android:maxLength="6"
                android:textColor="#000"
                android:singleLine="true"
                android:textSize="16dp"
                android:background="@null"
                android:inputType="number"
                android:layout_gravity="center"
                android:gravity="right"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_gravity="center"
                android:padding="10dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/yuan_white_shape"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:layout_marginHorizontal="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总金额"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/zong_doudou"
                android:layout_width="0dp"
                android:singleLine="true"
                android:background="@null"
                android:textColor="#000"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16dp"
                android:hint="0"
                android:inputType="number"
                android:gravity="right"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="魔豆"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_gravity="center"
                android:padding="10dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginVertical="12dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="500魔豆以上红包上大喇叭"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <CheckBox
                android:checked="true"
                android:id="@+id/cb_red_bag_isOpen"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        </LinearLayout>

        <TextView
            android:textSize="12dp"
            android:textColor="@color/normalGray"
            android:text="红包平均不低于2魔豆\n红包领取后为银魔豆"
            android:paddingVertical="10dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_live_red_envelopes_send"
            android:layout_marginVertical="25dp"
            android:background="@drawable/bg_round_live_red_envelopes_button"
            android:textColor="@color/white"
            android:paddingVertical="13dp"
            android:text="塞魔豆进红包"
            android:textSize="15dp"
            android:textStyle="bold"
            android:paddingHorizontal="43dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </com.aiwujie.shengmo.view.roundview.RoundLinearLayout>

</android.support.constraint.ConstraintLayout>