<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_top_round_white"
    android:paddingTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_share_in_app"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_share_sm"
            android:paddingVertical="10dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/smallapplogo"
                android:layout_width="60dp"
                android:layout_height="60dp"/>

            <TextView
                android:paddingVertical="5dp"
                android:textSize="12dp"
                android:text="好友/群"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="0px"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_share_we_chat"
            android:paddingVertical="10dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content">

            <FrameLayout
                android:background="@drawable/bg_round_share_item"
                android:layout_width="60dp"
                android:layout_height="60dp">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/ic_share_wechat"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </FrameLayout>

            <TextView
                android:paddingVertical="5dp"
                android:textSize="12dp"
                android:text="微信"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_share_friend_circle"
            android:paddingVertical="10dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content">

            <FrameLayout
                android:background="@drawable/bg_round_share_item"
                android:layout_width="60dp"
                android:layout_height="60dp">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/ic_share_friend_circle"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>
            </FrameLayout>

            <TextView
                android:paddingVertical="5dp"
                android:textSize="12dp"
                android:text="朋友圈"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_share_qq"
            android:paddingVertical="10dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content">

            <FrameLayout
                android:background="@drawable/bg_round_share_item"
                android:layout_width="60dp"
                android:layout_height="60dp">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/ic_share_qq"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </FrameLayout>

            <TextView
                android:paddingVertical="5dp"
                android:textSize="12dp"
                android:text="QQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_share_qq_zone"
            android:paddingVertical="10dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content">

            <FrameLayout
                android:background="@drawable/bg_round_share_item"
                android:layout_width="60dp"
                android:layout_height="60dp">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/ic_share_qq_zone"
                    android:layout_width="45dp"
                    android:layout_height="45dp"/>
            </FrameLayout>

            <TextView
                android:paddingVertical="5dp"
                android:textSize="12dp"
                android:text="QQ空间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_share_wei_bo"
            android:paddingVertical="10dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content">

            <FrameLayout
                android:background="@drawable/bg_round_share_item"
                android:layout_width="60dp"
                android:layout_height="60dp">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/ic_share_weibo"
                    android:layout_width="45dp"
                    android:layout_height="45dp"/>
            </FrameLayout>

            <TextView
                android:paddingVertical="5dp"
                android:textSize="12dp"
                android:text="微信"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="5px"/>

    <TextView
        android:id="@+id/tv_share_cancel"
        android:paddingVertical="20dp"
        android:gravity="center"
        android:textSize="16dp"
        android:text="取消"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>