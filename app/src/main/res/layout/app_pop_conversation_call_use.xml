<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tencent.qcloud.tim.tuikit.live.component.other.RoundLinearLayout
        app:layout_constraintVertical_bias="0.4"
        app:rRadius="10dp"
        android:background="@color/line_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:orientation="vertical"
        app:layout_constraintWidth_percent="0.85"
        android:layout_height="wrap_content">

        <FrameLayout
            android:background="@color/purple_main"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/iv_pop_close"
                android:padding="5dp"
                android:src="@drawable/ic_live_audiences_close"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <ImageView
                android:tint="@color/white"
                android:src="@drawable/ic_conversation_call"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:textSize="14dp"
                android:textColor="@color/titleBlack"
                android:layout_width="66dp"
                android:layout_height="66dp"/>

            <TextView
                android:layout_gravity="center"
                android:id="@+id/tv_pop_balance"
                tools:text="剩余 22 张呼唤卡"
                android:letterSpacing="0.1"
                android:lineSpacingExtra="10dp"
                android:layout_marginTop="40dp"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </FrameLayout>


        <LinearLayout
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="20dp"
            android:paddingVertical="10dp"
            android:background="@drawable/bg_round_big_white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:text="使用数量"
                android:layout_marginLeft="15dp"
                android:textColor="@color/titleBlack"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_weight="1"
                android:inputType="number"
                android:gravity="center"
                android:minWidth="30dp"
                android:id="@+id/et_pop_num"
                android:hint="0"
                android:text="1"
                android:textColor="#86a5ff"
                android:maxLength="5"
                android:background="@color/transparent"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </LinearLayout>


        <TextView
            android:id="@+id/tv_pop_commit"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:text="开启呼唤"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginHorizontal="15dp"
            android:paddingVertical="13dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/bg_round_purple_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.tencent.qcloud.tim.tuikit.live.component.other.RoundLinearLayout>

</android.support.constraint.ConstraintLayout>