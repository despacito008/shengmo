<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.aiwujie.shengmo.activity.RetrievePswActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="13%w"
        android:background="#FFFFFF"
        >
        <ImageView
            android:id="@+id/mRetrievePsw_return"
            android:layout_width="40dp"
            app:layout_heightPercent="50%"
            android:layout_height="0dp"
            android:text="@string/regist"
            android:gravity="center_vertical"
            android:src="@mipmap/return_back"
            android:layout_marginLeft="12dip"
            android:textColor="#4b4b4b"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/item_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找回密码"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            app:layout_textSizePercent="35%"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="#dddddd"/>
    <EditText
        android:id="@+id/mRetrievePsw_username"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="7.5%"
        app:layout_marginLeftPercent="8%"
        app:layout_marginRightPercent="8%"
        android:textCursorDrawable="@null"
        android:textSize="13sp"
        android:paddingLeft="10dip"
        android:textColorHint="#B7B7B7"
        android:textColor="#333333"
        android:hint="请输入手机号或邮箱"
        android:layout_marginTop="40dip"
        android:background="@drawable/item_login_et_username2"/>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="7.5%"
            app:layout_marginLeftPercent="8%"
            app:layout_marginRightPercent="8%"
            android:orientation="horizontal"
            android:layout_marginTop="15dip"
            >
            <EditText
                android:id="@+id/mRetrievePsw_etPicVercode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textCursorDrawable="@null"
                android:layout_weight="7"
                android:paddingLeft="10dip"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:textColorHint="#B7B7B7"
                android:textColor="#333333"
                android:textSize="13sp"
                android:hint="请输入右侧验证码"
                android:background="@drawable/item_login_et_username2"/>
            <ImageView
                android:id="@+id/mRetrievePsw_picVercode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:src="@mipmap/default_error"
                android:scaleType="fitXY"/>
        </com.zhy.android.percent.support.PercentLinearLayout>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="7.5%"
        app:layout_marginLeftPercent="8%"
        app:layout_marginRightPercent="8%"
        android:orientation="horizontal"
        android:layout_marginTop="15dip"
        >
        <EditText
            android:id="@+id/mRetrievePsw_vercode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textCursorDrawable="@null"
            android:layout_weight="7"
            android:paddingLeft="10dip"
            android:inputType="number"
            android:textColorHint="#B7B7B7"
            android:textColor="#333333"
            android:textSize="13sp"
            android:hint="请输入验证码"
            android:background="@drawable/item_login_et_username2"/>
        <Button
            android:id="@+id/mRetrievePsw_sendVercode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textCursorDrawable="@null"
            android:layout_weight="4"
            android:layout_marginLeft="10dip"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:gravity="center"
            android:text="点击获取验证码"
            android:background="@drawable/item_login_btn2"/>
    </com.zhy.android.percent.support.PercentLinearLayout>
    <EditText
        android:id="@+id/mRetrievePsw_password"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="7.5%"
        app:layout_marginLeftPercent="8%"
        app:layout_marginRightPercent="8%"
        android:textCursorDrawable="@null"
        android:textSize="13sp"
        android:maxLength="16"
        android:maxLines="1"
        android:paddingLeft="10dip"
        android:textColorHint="#B7B7B7"
        android:textColor="#333333"
        android:hint="请输入6-16位新密码"
        android:layout_marginTop="15dip"
        android:background="@drawable/item_login_et_username2"/>
    <!--<EditText-->
        <!--android:id="@+id/mRetrievePsw_repassword"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="45dp"-->
        <!--android:layout_marginLeft="12dip"-->
        <!--android:layout_marginRight="12dip"-->
        <!--android:textCursorDrawable="@null"-->
        <!--android:textSize="14sp"-->
        <!--android:paddingLeft="10dip"-->
        <!--android:textColorHint="#B7B7B7"-->
        <!--android:textColor="#333333"-->
        <!--android:hint="请再次输入密码"-->
        <!--android:layout_marginTop="15dip"-->
        <!--android:background="@drawable/item_login_et_username"/>-->
        <Button
            android:id="@+id/mRetrievePsw_btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="8%"
            android:layout_marginTop="50dip"
            app:layout_marginLeftPercent="8%"
            app:layout_marginRightPercent="8%"
            app:layout_textSizePercent="3%"
            android:textColor="#FFFFFF"
            android:text="确定"
            android:background="@drawable/item_login_btn2"
            />
    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>
