<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:id="@+id/layout_user_normal_info"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_layout_user_normal_info_sex_age"
            android:paddingVertical="0.5dp"
            android:paddingHorizontal="5dp"
            android:gravity="center"
            tools:background="@drawable/bg_user_info_sex_cdts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_layout_user_normal_info_sex"
                android:src="@mipmap/san"
                android:layout_width="10dp"
                android:layout_height="10dp"/>


            <TextView
                android:layout_marginLeft="5dp"
                android:includeFontPadding="false"
                tools:text="27"
                android:textSize="10dp"
                android:id="@+id/tv_layout_user_normal_info_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF" />

        </LinearLayout>



        <TextView
            android:layout_marginLeft="5dp"
            android:paddingVertical="0.5dp"
            android:paddingHorizontal="5dp"
            android:includeFontPadding="false"
            tools:text="æ…•"
            android:id="@+id/tv_layout_user_normal_info_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            tools:background="@drawable/bg_user_info_sex_girl"
            android:textColor="#FFFFFF"
            android:textSize="10dp" />



        <LinearLayout
            android:id="@+id/ll_layout_user_normal_info_wealth"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:paddingRight="5dp"
            android:background="@drawable/item_caifuzhi_bg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:paddingVertical="0.5dp"
                android:paddingHorizontal="3.5dp"
                android:background="@drawable/bg_user_wealth"
                android:id="@+id/iv_layout_user_normal_info_wealth"
                android:src="@drawable/user_wealth"
                android:layout_width="15dp"
                android:layout_height="match_parent"/>


            <TextView
                android:layout_marginLeft="3dp"
                android:includeFontPadding="false"
                tools:text="10000"
                android:textSize="10dp"
                android:textColor="#febf3b"
                android:id="@+id/tv_layout_user_normal_info_wealth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_layout_user_normal_info_charm"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:paddingRight="5dp"
            android:background="@drawable/item_meilizhi_bg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:paddingVertical="0.5dp"
                android:paddingHorizontal="3.5dp"
                android:background="@drawable/bg_user_info_charm"
                android:id="@+id/iv_layout_user_normal_info_charm"
                android:src="@drawable/user_charm"
                android:layout_width="15dp"
                android:layout_height="match_parent"/>


            <TextView
                android:layout_marginLeft="3dp"
                android:includeFontPadding="false"
                tools:text="10000"
                android:textSize="10dp"
                android:textColor="@color/thumbOrange"
                android:id="@+id/tv_layout_user_normal_info_charm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



    </LinearLayout>

</LinearLayout>