<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tencent.qcloud.tim.tuikit.live.component.other.RoundLinearLayout
        app:rRadius="10dp"
        app:layout_constraintVertical_bias="0.4"
        android:background="@color/line_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:orientation="vertical"
        app:layout_constraintWidth_percent="0.85"
        android:layout_height="wrap_content">

        <FrameLayout
            android:background="@color/purple_main"
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <ImageView
                android:id="@+id/iv_pop_close"
                android:padding="5dp"
                android:src="@drawable/ic_live_audiences_close"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <ImageView
                android:tint="@color/white"
                android:src="@drawable/ic_conversation_call"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:textSize="14dp"
                android:textColor="@color/titleBlack"
                android:layout_width="66dp"
                android:layout_height="66dp"/>

            <TextView
                android:id="@+id/tv_pop_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lineSpacingExtra="1dp"
                android:layout_marginTop="40dp"
                android:textColor="@color/white"
                android:textSize="13.5dp"
                tools:text="更多奖励 更多聊天" />

        </FrameLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_marginVertical="8dp"
            android:paddingHorizontal="1dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/rv_conversation_call_item"
            android:layout_width="match_parent"
            android:layout_height="115dp"/>

        <LinearLayout
            android:id="@+id/ll_choose_pay_type"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/bg_round_big_white"
            android:paddingVertical="12dp"
            android:paddingHorizontal="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/titleBlack"
                android:text="选择支付方式"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_pay_by_type"
                android:paddingHorizontal="5dp"
                android:text="支付宝"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:rotation="90"
                android:src="@drawable/arrow_right"
                android:layout_width="15dp"
                android:layout_height="15dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_buy_call"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:text="购买"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/bg_round_purple_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.tencent.qcloud.tim.tuikit.live.component.other.RoundLinearLayout>

</android.support.constraint.ConstraintLayout>