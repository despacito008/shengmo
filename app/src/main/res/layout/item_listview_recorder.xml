<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:gravity="center"
    tools:background="#a6af"
    android:orientation="horizontal"
    android:paddingHorizontal="15dp"
    android:paddingVertical="15dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/item_recorder_rmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            tools:text="[直播] [海龟先生] 在 [落日归山海] 的直播间赠[红包]"
            android:textColor="@color/titleBlack"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_recorder_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="12dp"
                tools:text="2021-05-05 10:10" />

            <TextView
                android:id="@+id/item_recorder_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#666666"
                android:textSize="12dp"
                tools:text="星期一" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center|right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_recorder_modou"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            tools:text="+1790"
            android:textStyle="bold"
            android:textColor="@color/titleBlack"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/iv_item_recorder_beans"
            android:layout_marginLeft="9.5dp"
            android:src="@drawable/ranking_beans"
            android:layout_width="15dp"
            android:layout_height="15dp"/>
    </LinearLayout>

</LinearLayout>