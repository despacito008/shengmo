<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:background="@drawable/bg_round_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:orientation="vertical"
        app:layout_constraintWidth_percent="0.7"
        android:layout_height="wrap_content">

        <TextView
            android:paddingVertical="20dp"
            android:textSize="16dp"
            android:textColor="@color/titleBlack"
            android:text="申请认领"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <EditText
            android:id="@+id/et_pop_group_claim"
            android:padding="10dp"
            android:textSize="14dp"
            android:hint="申请理由(非必填)"
            android:minLines="8"
            android:gravity="start"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_round_verify_code_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="8dp"
                android:id="@+id/tv_pop_claim_group_cancel"
                android:background="@drawable/bg_round_cancel"
                android:textColor="@color/normalGray"
                android:gravity="center"
                android:paddingVertical="12dp"
                android:includeFontPadding="false"
                android:text="@string/cancel"
                android:textSize="16dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_pop_claim_group_confirm"
                android:background="@drawable/bg_user_info_claim"
                android:layout_marginLeft="8dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:paddingVertical="12dp"
                android:includeFontPadding="false"
                android:text="@string/confirm"
                android:textSize="16dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>