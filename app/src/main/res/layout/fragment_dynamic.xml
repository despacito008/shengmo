<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_heightPercent="13%w"
            android:background="#FFFFFF"
            >
            <RelativeLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/ll_FragmentDynamic_horn"
                >
                <ImageView
                    android:id="@+id/mFragmentDynamic_horn"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/dalaba"
                   />

                <TextView
                    android:id="@+id/mFragmentDynamic_labaPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginTop="5dp"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_marginBottom="-1dp"
                    android:paddingLeft="5dp"
                    android:layout_toRightOf="@+id/mFragmentDynamic_horn"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="-10dp"
                    android:background="@drawable/item_messagecount_bg"
                    android:textColor="#FFFFFF"
                    android:singleLine="true"
                    tools:visibility="visible"
                    android:visibility="gone"
                    android:text="99"/>
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/fl_home_notice_active"
                android:paddingHorizontal="12dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/ic_home_notice_active"
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

            </FrameLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="36"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginHorizontal="15dp"
                >
                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/mFragmentDynamic_title_hot"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="热推"
                        android:layout_centerInParent="true"
                        android:textColor="@drawable/item_home_text_selector"
                        android:gravity="center"
                        android:textSize="18dp"
                        />
                    <ImageView
                        android:id="@+id/mFragmentDynamic_hot_dian"
                        android:layout_width="15dp"
                        android:layout_height="4dp"
                        app:layout_marginBottomPercent="5%"
                        android:background="@drawable/bg_round_titleblack"
                        android:scaleType="fitXY"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        />
                    <TextView
                        android:id="@+id/mFragment_dynamic_recommendCount"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_heightPercent="40%h"
                        app:layout_widthPercent="40%h"
                        app:layout_marginRightPercent="14%h"
                        app:layout_marginTopPercent="10%h"
                        app:layout_textSizePercent="18%h"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/item_messagecount_bg"
                        android:textColor="#FFFFFF"
                        android:text="99+"
                        android:visibility="gone"
                        />
                </com.zhy.android.percent.support.PercentRelativeLayout>
                <!--<com.zhy.android.percent.support.PercentRelativeLayout-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:layout_height="match_parent">-->
                    <!--<TextView-->
                        <!--android:id="@+id/mFragmentDynamic_title_near"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:text="热评"-->
                        <!--android:gravity="center"-->
                        <!--android:layout_centerInParent="true"-->
                        <!--android:textColor="@drawable/item_home_text_selector"-->
                        <!--app:layout_textSizePercent="35%"-->
                        <!--/>-->
                    <!--<ImageView-->
                        <!--android:id="@+id/mFragmentDynamic_near_dian"-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="0dp"-->
                        <!--app:layout_widthPercent="15%"-->
                        <!--app:layout_heightPercent="15%"-->
                        <!--android:layout_marginBottom="2dip"-->
                        <!--android:layout_alignParentBottom="true"-->
                        <!--android:layout_centerHorizontal="true"-->
                        <!--android:visibility="gone"-->
                        <!--android:src="@mipmap/yuandian"/>-->
                <!--</com.zhy.android.percent.support.PercentRelativeLayout>-->
                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/mFragmentDynamic_title_follow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="广场"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:textColor="@drawable/item_home_text_selector"
                        android:textSize="18dp"
                        />
                    <ImageView
                        android:id="@+id/mFragmentDynamic_follow_dian"
                        android:layout_width="15dp"
                        android:layout_height="4dp"
                        app:layout_marginBottomPercent="5%"
                        android:background="@drawable/bg_round_titleblack"

                        android:scaleType="fitXY"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:visibility="gone"
                       />
                    <TextView
                        android:id="@+id/mFragment_dynamic_newCount"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_heightPercent="40%h"
                        app:layout_widthPercent="40%h"
                        app:layout_marginRightPercent="14%h"
                        app:layout_marginTopPercent="10%h"
                        app:layout_textSizePercent="18%h"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/item_messagecount_bg"
                        android:textColor="#FFFFFF"
                        android:text="99+"
                        android:visibility="gone"
                        />
                </com.zhy.android.percent.support.PercentRelativeLayout>
                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/mFragmentDynamic_title_my"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="关注"
                        android:gravity="center"
                        android:textColor="@drawable/item_home_text_selector"
                        android:textSize="18dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                    <ImageView
                        android:id="@+id/mFragmentDynamic_my_dian"
                        android:layout_width="15dp"
                        android:layout_height="4dp"
                        app:layout_marginBottomPercent="5%"
                        android:background="@drawable/bg_round_titleblack"
                        android:scaleType="fitXY"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:visibility="gone"
                        />
                    <TextView
                        android:id="@+id/mFragment_dynamic_followCount"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_heightPercent="40%h"
                        app:layout_widthPercent="40%h"
                        app:layout_marginRightPercent="14%h"
                        app:layout_marginTopPercent="10%h"
                        app:layout_textSizePercent="18%h"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/item_messagecount_bg"
                        android:textColor="#FFFFFF"
                        android:text="9"
                        android:visibility="gone"
                        />
                </com.zhy.android.percent.support.PercentRelativeLayout>
                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/mFragmentDynamic_title_topic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="话题"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:textColor="@drawable/item_home_text_selector"
                        android:textSize="18dp"
                        />
                    <ImageView
                        android:id="@+id/mFragmentDynamic_topic_dian"
                        android:layout_width="15dp"
                        android:layout_height="4dp"
                        app:layout_marginBottomPercent="5%"
                        android:background="@drawable/bg_round_titleblack"
                        android:scaleType="fitXY"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:visibility="gone"
                        />
                </com.zhy.android.percent.support.PercentRelativeLayout>
            </com.zhy.android.percent.support.PercentLinearLayout>
            <com.zhy.android.percent.support.PercentRelativeLayout
                android:id="@+id/mFragmentDynamic_ckpinglun"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_widthPercent="6.5%"
                android:layout_marginRight="12dp"
                >
                <ImageView
                    android:id="@+id/mFragmentDynamic_Sx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:src="@drawable/shuaixuan"
                    android:layout_centerVertical="true"
                    android:visibility="visible"
                    />
                <ImageView
                    android:id="@+id/mFragmentDynamic_myOrJoinTopic"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_widthPercent="98%"
                    android:src="@mipmap/mytopic"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    />
            </com.zhy.android.percent.support.PercentRelativeLayout>
        </com.zhy.android.percent.support.PercentLinearLayout>
        <TextView
            android:id="@+id/mFragmentDynamic_line"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/mFragmentDynamic_ll_new"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_heightPercent="8%w"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/item_uplevel_conner_bg"
            android:paddingLeft="6dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingRight="6dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/mFragmentDynamic_newContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1条新消息"
                android:textColor="#ffffff"
                app:layout_textSizePercent="3.5%w"
                android:layout_marginLeft="2dp"
                android:layout_gravity="center_vertical"/>
        </com.zhy.android.percent.support.PercentLinearLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/mFragment_dynamic_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"/>
    </com.zhy.android.percent.support.PercentLinearLayout>
    <ImageView
        android:id="@+id/mFragmentDynamic_sendDynamic"
        tools:visibility="visible"
        tools:alpha="0.7"
        android:layout_width="102dp"
        android:layout_height="33dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:src="@mipmap/senddynamic"
        android:scaleType="fitXY"
        android:alpha="0"
        />
</com.zhy.android.percent.support.PercentRelativeLayout>