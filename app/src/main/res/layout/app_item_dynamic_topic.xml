<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_item_dynamic_topic"
        tools:background="#6cf"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintDimensionRatio="1"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/iv_item_dynamic_topic"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_dynamic_topic"
        app:layout_constraintLeft_toRightOf="@id/iv_item_dynamic_topic"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/tv_item_dynamic_topic_name"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:textColor="@color/titleBlack"
            tools:text="#一人一首成名曲#"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/tv_item_dynamic_topic_info"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:textColor="@color/normalGray"
            android:ellipsize="end"
            android:singleLine="true"
            tools:text="说下你认为的一人一首成名曲 经典永流传 说下你认为的一人一首成名曲"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_item_dynamic_topic_join"
                android:textSize="13dp"
                android:gravity="center_vertical"
                android:textColor="@color/normalGray"
                tools:text="35673人参与"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_item_dynamic_topic_num"
                android:textSize="13dp"
                android:gravity="center_vertical"
                android:textColor="@color/normalGray"
                tools:text="2789动态"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>