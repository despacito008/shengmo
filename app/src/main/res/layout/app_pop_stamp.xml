<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="#6000"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view_pop_stamp"
        android:background="@drawable/bg_round_white"
        app:layout_constraintDimensionRatio="305:424"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <ImageView
        android:layout_marginRight="11dp"
        android:id="@+id/stamp_dialog_ivMan"
        app:layout_constraintRight_toLeftOf="@id/stamp_dialog_ivWomen"
        app:layout_constraintBottom_toBottomOf="@id/stamp_dialog_ivWomen"
        android:src="@drawable/ic_stamp_boy"
        android:layout_width="98dp"
        android:layout_height="98dp"/>

    <ImageView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp"
        android:id="@+id/stamp_dialog_ivWomen"
        app:layout_constraintBottom_toBottomOf="@id/view_pop_stamp"
        android:src="@drawable/ic_stamp_girl"
        android:layout_width="98dp"
        android:layout_height="98dp"/>

    <ImageView
        android:layout_marginLeft="11dp"
        android:id="@+id/stamp_dialog_ivCdts"
        app:layout_constraintLeft_toRightOf="@id/stamp_dialog_ivWomen"
        app:layout_constraintBottom_toBottomOf="@id/stamp_dialog_ivWomen"
        android:src="@drawable/ic_stamp_cdts"
        android:layout_width="98dp"
        android:layout_height="98dp"/>

    <TextView
        android:id="@+id/stamp_dialog_manYpCount"
        app:layout_constraintLeft_toLeftOf="@id/stamp_dialog_ivMan"
        app:layout_constraintRight_toRightOf="@id/stamp_dialog_ivMan"
        app:layout_constraintBottom_toBottomOf="@id/stamp_dialog_ivMan"
        android:layout_marginBottom="5dp"
        tools:text="1张"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/stamp_dialog_womanYpCount"
        app:layout_constraintLeft_toLeftOf="@id/stamp_dialog_ivWomen"
        app:layout_constraintRight_toRightOf="@id/stamp_dialog_ivWomen"
        app:layout_constraintBottom_toBottomOf="@id/stamp_dialog_ivWomen"
        android:layout_marginBottom="5dp"
        tools:text="1张"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/stamp_dialog_cdtsYpCount"
        app:layout_constraintLeft_toLeftOf="@id/stamp_dialog_ivCdts"
        app:layout_constraintRight_toRightOf="@id/stamp_dialog_ivCdts"
        app:layout_constraintBottom_toBottomOf="@id/stamp_dialog_ivCdts"
        android:layout_marginBottom="5dp"
        tools:text="1张"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="18dp"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="@id/view_pop_stamp"
        app:layout_constraintRight_toRightOf="@id/view_pop_stamp"
        app:layout_constraintTop_toTopOf="@id/view_pop_stamp"
        android:text="与Ta畅聊的4种方式"
        android:textColor="#ffab3a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_pop_stamp_friend_txt"
        android:layout_marginLeft="15dp"
        android:textSize="14dp"
        android:textColor="@color/titleBlack"
        app:layout_constraintLeft_toLeftOf="@id/view_pop_stamp"
        app:layout_constraintTop_toTopOf="@id/view_pop_stamp"
        android:layout_marginTop="55dp"
        android:text="1. 互为好友即可免费发消息"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/stamp_dialog_follow"
        android:textColor="@color/white"
        android:paddingHorizontal="10dp"
        android:paddingVertical="6dp"
        android:textSize="12dp"
        app:layout_constraintTop_toTopOf="@id/tv_pop_stamp_friend_txt"
        app:layout_constraintRight_toRightOf="@id/view_pop_stamp"
        app:layout_constraintBottom_toBottomOf="@id/tv_pop_stamp_friend_txt"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_user_info_sex_cdts"
        android:gravity="center"
        android:text="加好友"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_pop_stamp_svip_txt"
        android:layout_marginLeft="15dp"
        android:textSize="14dp"
        android:textColor="@color/titleBlack"
        app:layout_constraintLeft_toLeftOf="@id/view_pop_stamp"
        app:layout_constraintTop_toBottomOf="@id/tv_pop_stamp_friend_txt"
        android:layout_marginTop="29dp"
        android:text="2. 开通SVIP即可无限畅聊"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <TextView
        android:id="@+id/stamp_dialog_openVip"
        android:textColor="@color/white"
        android:paddingHorizontal="10dp"
        android:paddingVertical="6dp"
        android:textSize="12dp"
        app:layout_constraintTop_toTopOf="@id/tv_pop_stamp_svip_txt"
        app:layout_constraintRight_toRightOf="@id/view_pop_stamp"
        app:layout_constraintBottom_toBottomOf="@id/tv_pop_stamp_svip_txt"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_user_info_sex_cdts"
        android:gravity="center"
        android:text="去开通"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_pop_stamp_stamp_txt"
        android:layout_marginLeft="15dp"
        android:textSize="14dp"
        android:textColor="@color/titleBlack"
        app:layout_constraintLeft_toLeftOf="@id/view_pop_stamp"
        app:layout_constraintTop_toBottomOf="@id/tv_pop_stamp_svip_txt"
        android:layout_marginTop="29dp"
        android:text="3. 点击邮票，发送消息"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/stamp_dialog_ivCommon"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_pop_stamp_stamp_txt"
        app:layout_constraintLeft_toLeftOf="@id/tv_pop_stamp_stamp_txt"
        android:src="@drawable/ic_stamp_normal"
        android:layout_width="108dp"
        android:layout_height="77dp"/>

    <TextView
        android:id="@+id/stamp_dialog_commonStamp"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toTopOf="@id/stamp_dialog_ivCommon"
        app:layout_constraintLeft_toRightOf="@id/stamp_dialog_ivCommon"
        app:layout_constraintBottom_toBottomOf="@id/stamp_dialog_ivCommon"
        app:layout_constraintVertical_bias="0.3"
        android:text="0 张"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginLeft="12dp"
        android:textSize="12dp"
        android:textColor="@color/titleBlack"
        app:layout_constraintTop_toTopOf="@id/stamp_dialog_ivCommon"
        app:layout_constraintLeft_toRightOf="@id/stamp_dialog_ivCommon"
        app:layout_constraintBottom_toBottomOf="@id/stamp_dialog_ivCommon"
        app:layout_constraintVertical_bias="0.7"
        android:text="拥有通用邮票"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/stamp_dialog_goBuy"
        android:textColor="@color/white"
        android:paddingHorizontal="10dp"
        android:paddingVertical="6dp"
        android:textSize="12dp"
        app:layout_constraintTop_toTopOf="@id/stamp_dialog_ivCommon"
        app:layout_constraintRight_toRightOf="@id/view_pop_stamp"
        app:layout_constraintBottom_toBottomOf="@id/stamp_dialog_ivCommon"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_user_info_sex_cdts"
        android:gravity="center"
        android:text="去购买"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_pop_stamp_task_txt"
        android:layout_marginLeft="15dp"
        android:textSize="14dp"
        android:textColor="@color/titleBlack"
        app:layout_constraintLeft_toLeftOf="@id/view_pop_stamp"
        app:layout_constraintTop_toBottomOf="@id/stamp_dialog_ivCommon"
        app:layout_constraintBottom_toTopOf="@id/stamp_dialog_ivMan"
        android:text="4. 做任务免费领邮票"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/stamp_dialog_goDo"
        android:textColor="@color/white"
        android:paddingHorizontal="10dp"
        android:paddingVertical="6dp"
        android:textSize="12dp"
        app:layout_constraintTop_toTopOf="@id/tv_pop_stamp_task_txt"
        app:layout_constraintRight_toRightOf="@id/view_pop_stamp"
        app:layout_constraintBottom_toBottomOf="@id/tv_pop_stamp_task_txt"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_user_info_sex_cdts"
        android:gravity="center"
        android:text="做任务"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_pop_stamp_task_tips"
        android:textSize="11dp"
        android:textColor="@color/lightGray"
        app:layout_constraintLeft_toLeftOf="@id/tv_pop_stamp_task_txt"
        app:layout_constraintRight_toRightOf="@id/tv_pop_stamp_task_txt"
        app:layout_constraintTop_toBottomOf="@id/tv_pop_stamp_task_txt"
        android:layout_marginTop="2dp"
        android:text="任务获赠，当日有效"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>