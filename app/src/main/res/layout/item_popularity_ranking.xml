<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    tools:ignore="SpUsage,ContentDescription,RtlHardcoded,HardcodedText"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_item_popularity_ranking_index"
        tools:text="1"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="17dp"
        android:textColor="@color/titleBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_item_popularity_ranking_icon"
        tools:background="#6a7"
        android:layout_marginLeft="44dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="55dp"
        android:layout_height="55dp"/>

    <ImageView
        android:id="@+id/iv_item_popularity_ranking_identity"
        tools:src="@drawable/user_vip"
        app:layout_constraintRight_toRightOf="@id/iv_item_popularity_ranking_icon"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_popularity_ranking_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"/>

    <TextView
        android:textColor="@color/titleBlack"
        android:textSize="14dp"
        android:includeFontPadding="false"
        tools:text="海龟先生"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toRightOf="@id/iv_item_popularity_ranking_icon"
        app:layout_constraintTop_toTopOf="@id/iv_item_popularity_ranking_icon"
        android:id="@+id/tv_item_popularity_ranking_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        app:layout_constraintVertical_bias="0.7"
        android:id="@+id/ll_item_popularity_ranking_info"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@id/tv_item_popularity_ranking_name"
        app:layout_constraintTop_toTopOf="@id/iv_item_popularity_ranking_icon"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_popularity_ranking_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_item_popularity_ranking_sex"
            android:paddingVertical="1dp"
            android:paddingHorizontal="5dp"
            tools:background="@drawable/bg_user_info_sex_cdts"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_item_popularity_ranking_sex"
                android:layout_marginHorizontal="5dp"
                tools:src="@mipmap/san"
                android:layout_width="9dp"
                android:layout_height="9dp"/>

            <TextView
                android:id="@+id/tv_item_popularity_ranking_age"
                android:includeFontPadding="false"
                tools:text="25"
                android:textColor="@color/white"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_popularity_ranking_role"
            android:layout_marginLeft="5dp"
            android:paddingVertical="1dp"
            android:paddingHorizontal="5dp"
            tools:background="@drawable/bg_user_info_sex_girl"
            android:includeFontPadding="false"
            android:textSize="11dp"
            android:textColor="@color/white"
            tools:text="慕"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:id="@+id/ll_item_popularity_ranking_wealth"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:background="@drawable/item_caifuzhi_bg"
            android:orientation="horizontal">

            <ImageView
                android:background="@drawable/bg_user_wealth"
                android:paddingVertical="2.5dp"
                android:paddingHorizontal="4.5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/user_wealth" />

            <TextView
                tools:text="10086"
                android:id="@+id/tv_item_popularity_ranking_wealth"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="6dp"
                android:textColor="#febf3b"
                android:textSize="11dp" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:id="@+id/ll_item_popularity_ranking_charm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:background="@drawable/item_meilizhi_bg"
            android:orientation="horizontal">

            <ImageView
                android:background="@drawable/bg_user_info_charm"
                android:paddingVertical="2.5dp"
                android:paddingHorizontal="4.5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/user_charm" />

            <TextView
                tools:text="10086"
                android:id="@+id/tv_item_popularity_ranking_charm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="6dp"
                android:textColor="@color/thumbOrange"
                android:textSize="11dp" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@id/tv_item_popularity_ranking_name"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_popularity_ranking_num"
            android:includeFontPadding="false"
            android:textStyle="bold"
            android:textSize="18dp"
            tools:text="92"
            android:textColor="#0ecdcb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_item_popularity_ranking_num_txt"
            android:includeFontPadding="false"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="5dp"
            android:textSize="12dp"
            android:text="次"
            android:textColor="#0ecdcb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
        android:visibility="gone"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#e5e5e5"
        android:layout_width="0dp"
        android:layout_height="0.5dp"/>

</android.support.constraint.ConstraintLayout>