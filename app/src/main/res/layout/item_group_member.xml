<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_click_bg_selector"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        >

        <include
            layout="@layout/layout_user_avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"/>


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_near_listview_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="11dp"
                    android:paddingTop="1dp"
                    android:gravity="center"
                    android:paddingBottom="1dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:layout_marginRight="5dp"
                    tools:visibility="visible"
                    tools:background="@drawable/item_member_flag_lan"
                    tools:text="管理员"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/item_near_listview_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/titleBlack"
                    tools:text="海龟先生"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical"
                    />

                <ImageView
                    android:id="@+id/item_near_listview_shiming"
                    android:layout_width="25px"
                    android:layout_height="20px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dip"
                    android:visibility="invisible"
                    android:src="@drawable/ic_zipai"
                    />

                <ImageView
                    android:id="@+id/item_near_listview_id_card"
                    android:layout_width="25px"
                    android:layout_height="20px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dip"
                    android:visibility="invisible"
                    android:src="@drawable/ic_ziliao"
                    />

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dip">
                    <TextView
                        android:id="@+id/item_near_listview_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="18px"
                        android:layout_alignParentRight="true"
                        />
                    <LinearLayout
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/item_near_listview_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:textSize="12dp"
                            android:textColor="@color/lightGray"
                            tools:visibility="visible"
                            android:visibility="gone"
                            tools:text="200km"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dip"/>

                        <ImageView
                            tools:visibility="visible"
                            android:visibility="gone"
                            android:id="@+id/iv_item_near_distance"
                            android:src="@drawable/ic_no_distance"
                            android:layout_width="12.5dp"
                            android:layout_height="13.5dp"/>

                    </LinearLayout>


                </com.zhy.autolayout.AutoRelativeLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="20dp">

                <LinearLayout
                    android:gravity="center"
                    tools:background="@drawable/bg_user_info_sex_girl"
                    android:orientation="horizontal"
                    android:id="@+id/ll_item_sex_and_age"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="0.5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_item_sex"
                        android:src="@mipmap/nv"
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>

                    <TextView
                        android:includeFontPadding="false"
                        android:layout_marginLeft="2dp"
                        tools:text="25"
                        android:id="@+id/item_near_listview_Sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="#FFFFFF" />

                </LinearLayout>


                <TextView
                    android:layout_marginLeft="5dp"
                    tools:text="斯"
                    android:includeFontPadding="false"
                    tools:background="@drawable/bg_user_info_sex_boy"
                    android:id="@+id/item_near_listview_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/user_info_role_text"
                    android:textSize="9dp"
                    android:paddingVertical="0.5dp"
                    android:paddingHorizontal="5dp"
                    android:layout_toRightOf="@+id/ll_item_sex_and_age"
                    android:layout_centerVertical="true"
                    />

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/item_near_listview_ll_richCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:background="@drawable/item_caifuzhi_bg"
                    android:layout_toRightOf="@+id/item_near_listview_role"
                    android:layout_marginLeft="5dp"
                    tools:visibility="visible"
                    android:visibility="gone">

                    <ImageView
                        android:background="@drawable/bg_user_wealth"
                        android:layout_width="18dp"
                        android:layout_height="13dp"
                        android:padding="2dp"
                        android:src="@drawable/user_wealth" />

                    <TextView
                        tools:text="100"
                        android:id="@+id/item_near_listview_richCount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="#febf3b"
                        android:paddingLeft="2dp"
                        android:paddingRight="5dp"
                        android:textSize="9dp"/>
                </com.zhy.autolayout.AutoLinearLayout>


                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_marginLeft="5dp"
                    android:id="@+id/item_near_listview_ll_beautyCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:background="@drawable/item_meilizhi_bg"
                    android:layout_toRightOf="@+id/item_near_listview_ll_richCount"
                    tools:visibility="visible"
                    android:visibility="gone"
                    >

                    <ImageView
                        android:background="@drawable/bg_user_info_charm"
                        android:layout_width="18dp"
                        android:layout_height="13dp"
                        android:padding="2dp"
                        android:src="@drawable/user_charm" />
                    <TextView
                        tools:text="100"
                        android:id="@+id/item_near_listview_beautyCount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="#f56684"
                        android:paddingLeft="2dp"
                        android:paddingRight="5dp"
                        android:textSize="9dp"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/item_near_listview_banSomeOne"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/jinyanicon"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    tools:text="北京市"
                    android:id="@+id/item_near_listview_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical" />

                <ImageView
                    tools:visibility="visible"
                    android:visibility="gone"
                    android:id="@+id/iv_item_near_location"
                    android:src="@drawable/ic_no_location"
                    android:layout_width="12.5dp"
                    android:layout_height="13.5dp"/>

            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>