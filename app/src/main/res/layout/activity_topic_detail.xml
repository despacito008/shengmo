<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_topic_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.aiwujie.shengmo.activity.TopicDetailActivity">
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/mTopic_detail_ll_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="13%w"
        android:background="@color/white">
        <ImageView
            android:id="@+id/mTopic_detail_return"
            android:layout_width="40dp"
            app:layout_heightPercent="50%"
            android:layout_height="0dp"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:src="@mipmap/return_back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:layout_centerInParent="true"
            app:layout_textSizePercent="35%"
            android:text="话题"/>

        <ProgressBar
            android:id="@+id/mTopic_detail_progressbar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:visibility="gone"
            android:layout_centerVertical="true"
            />

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/mFragmentDynamic_ckpinglun"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_widthPercent="6.5%"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            >
            <ImageView
                android:id="@+id/mFragmentDynamic_Sx"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:layout_widthPercent="98%"
                android:src="@drawable/shuaixuan"
                android:layout_centerVertical="true"
                android:visibility="visible"
                />
        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <TextView
        android:id="@+id/mFragmentDynamic_line"
        android:layout_width="match_parent"
        android:layout_height="1dp" />


    <com.zhy.android.percent.support.PercentFrameLayout
        android:id="@+id/mTopic_detail_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mTopic_detail_ll_title"
        android:alpha="0"
        >
        <ListView
            android:id="@+id/mTopic_detail_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:divider="@null"
            />
        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/mTopic_detail_ll_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#f5f5f5"/>
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="12%w"
                android:background="#ffffff"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/mTopic_detail_tv01"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="最新"
                    android:textColor="@drawable/item_chongzhi_text_selector"
                    app:layout_textSizePercent="4%w"
                    />
                <TextView
                    android:id="@+id/mTopic_detail_tv02"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="热门"
                    android:textColor="@drawable/item_chongzhi_text_selector"
                    app:layout_textSizePercent="4%w"
                    />
            </com.zhy.android.percent.support.PercentLinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#f5f5f5"/>
        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentFrameLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/mTopicDetail_joinTopic_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:layout_marginBottomPercent="4%w"
        android:alpha="0"
        android:gravity="center"
        app:layout_widthPercent="79%w"
        app:layout_heightPercent="12%w"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/mTopicDetail_followTopic"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="32%w"
            app:layout_heightPercent="12%w"
            android:src="@mipmap/guanzhuhuati"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/mTopicDetail_joinTopic"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="32%w"
            app:layout_heightPercent="12%w"
            app:layout_marginLeftPercent="14%w"
            android:src="@mipmap/canyuhuati"
            android:scaleType="fitXY"
            />

    </com.zhy.android.percent.support.PercentLinearLayout>

    <ImageView
        android:id="@+id/mFragment_dynamic_hot_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="12%w"
        app:layout_widthPercent="12%w"
        app:layout_marginBottomPercent="5%w"
        app:layout_marginRightPercent="2%w"
        android:gravity="center"
        android:src="@mipmap/dingbu"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        />

</com.zhy.android.percent.support.PercentRelativeLayout>
