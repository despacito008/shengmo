    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_qunweihu"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center"
        android:background="#12ffb1e6"
        android:textColor="#ffb1e6"
        android:text="群组维护禁言中,只开放个别官方群"/>

    <LinearLayout
        android:id="@+id/ll_group_square_header"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <FrameLayout
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            android:id="@+id/mMy_banner_framlayout"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="1"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="750:172">

            <com.youth.banner.Banner
                android:id="@+id/mMy_banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:indicator_drawable_selected="@mipmap/bannerpointpurple"
                app:indicator_drawable_unselected="@mipmap/bannerpointgray"
                app:indicator_height="8dp"
                app:indicator_width="8dp" />

            <ImageView
                android:id="@+id/mMy_banner_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:src="@mipmap/chahao" />
        </FrameLayout>

        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/layout_normal_search"
                android:layout_marginLeft="15dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginHorizontal="15dp"
                android:id="@+id/mGroupSquare_make"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/group_add"
                tools:visibility="gone"
                android:visibility="gone"
                android:gravity="center_vertical"
                />



            <TextView
                android:id="@+id/tv_group_rule"
                android:gravity="center"
                android:paddingVertical="3dp"
                android:paddingHorizontal="5dp"
                android:background="@drawable/border_group_claim"
                android:includeFontPadding="false"
                android:textColor="@color/purple_main"
                android:text="@string/group_rule"
                android:lineSpacingMultiplier="0.8"
                android:textSize="8dp"
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>




        </LinearLayout>

    </LinearLayout>



    <com.zhy.android.percent.support.PercentLinearLayout
        android:visibility="gone"
        android:id="@+id/mGroupSquare_ll_iv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="7.5%w"
        android:layout_margin="15dp"
        android:background="@drawable/border_group_search"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/mGroupSquare_tv_search"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="9"
            app:layout_heightPercent="90%"
            android:layout_gravity="center_vertical"
            android:background="#FFFFFF"
            android:hint="搜索群"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            app:layout_textSizePercent="45%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="5%"
            />

    </com.zhy.android.percent.support.PercentLinearLayout>

