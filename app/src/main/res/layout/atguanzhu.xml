<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/mGroupSearchKeyWord_et_sou"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="12sp"
        android:layout_gravity="center_vertical"
        android:textCursorDrawable="@null"
        android:background="#FFf"
        android:hint="搜索"
        android:imeOptions="actionSearch"
        android:singleLine="true"
        android:paddingLeft="10dp"
        android:maxLength="10"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/mAt_fans_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        ptr:ptrHeaderTextColor="#FFFFFF"
        android:dividerHeight="0.5dp"
        android:divider="#f8f8f8"
        ptr:ptrDrawable="@mipmap/loading"
        ptr:ptrScrollingWhileRefreshingEnabled="true"
        >
        <!--<com.aiwujie.shengmo.customview.MyListView-->
        <!--android:id="@+id/mFragment_fans_listview"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:scrollbars="none">-->

        <!--</com.aiwujie.shengmo.customview.MyListView>-->
    </com.handmark.pulltorefresh.library.PullToRefreshListView>

</LinearLayout>
