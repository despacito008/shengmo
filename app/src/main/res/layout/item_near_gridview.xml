<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:scaleType="fitXY"
        android:src="@mipmap/heimingdan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_identity_icon"
        android:layout_width="27dp"
        android:layout_height="0dp"
        android:src="@drawable/user_svip"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="@+id/guideLine1"
        app:layout_constraintTop_toTopOf="@id/guideLine"
        />

    <android.support.constraint.Guideline
        android:id="@+id/guideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.09" />
    <android.support.constraint.Guideline
        android:id="@+id/guideLine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.09" />

    <android.support.constraint.Guideline
        android:id="@+id/guideLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.91" />
    <android.support.constraint.Guideline
        android:id="@+id/guideLine3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.91" />
      <View
        android:id="@+id/view_online_state"
        android:layout_width="5dp"
        android:layout_height="0dp"
        android:layout_marginLeft="2dp"
        android:background="@drawable/shape_online"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintRight_toRightOf="@id/guideLine2"
        app:layout_constraintTop_toTopOf="@id/guideLine" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_max="wrap"
        app:layout_constraintHeight_percent="0.5"
        android:background="@drawable/bg_short_video_bottom_mask" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:includeFontPadding="false"
        android:text="1111"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:lines="1"
        android:ellipsize="end"
        app:layout_constraintRight_toLeftOf="@id/tv_item_sex"
        app:layout_constraintBottom_toBottomOf="@id/guideLine3"
        app:layout_constraintLeft_toLeftOf="@id/guideLine1" />

    <TextView
        android:id="@+id/tv_item_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawableLeft="@mipmap/san"
        android:drawablePadding="3dp"
        android:paddingLeft="4.5dp"
        android:paddingTop="1.5dp"
        android:paddingRight="4.5dp"
        android:paddingBottom="1.5dp"
        android:includeFontPadding="false"
        android:textColor="#FFFFFF"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@id/guideLine3"
        app:layout_constraintRight_toRightOf="@id/guideLine2" />


</android.support.constraint.ConstraintLayout>

