<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="12%w"
        android:background="@mipmap/redsrgt"
        app:layout_marginLeftPercent="3%w"
        app:layout_marginRightPercent="3%w"
        />


     <android.support.v7.widget.RecyclerView
         android:layout_width="match_parent"
         android:id="@+id/rlv_service_info"
         android:layout_height="wrap_content"/>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="10%w"
        app:layout_marginLeftPercent="8%w"
        app:layout_marginRightPercent="8%w"
        app:layout_marginTopPercent="4%w"
        android:orientation="horizontal"
        android:background="@drawable/item_redwomen_tv_bg">
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="15%w"
                app:layout_widthPercent="15%w"
                android:src="@mipmap/gongyidianhua"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/mRedwomen_person_center_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_textSizePercent="9.5%w"
                android:textColor="#777777"
                android:text="010-56405100"
                android:layout_marginLeft="5dp"
                />
        </com.zhy.android.percent.support.PercentLinearLayout>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="15%w"
                app:layout_widthPercent="15%w"
                android:src="@mipmap/gongyishouji"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/mRedwomen_person_center_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_textSizePercent="9.5%w"
                android:textColor="#777777"
                android:text="13436537298"
                android:layout_marginLeft="5dp"
                />
        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="12%w"
        android:background="@mipmap/redjffy"
        app:layout_marginTopPercent="5%w"
        app:layout_marginLeftPercent="3%w"
        app:layout_marginRightPercent="3%w"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="26%w"
        android:src="@mipmap/redwomenfeiyong"
        app:layout_marginTopPercent="2%w"
        app:layout_marginBottomPercent="5%w"
        />
</com.zhy.android.percent.support.PercentLinearLayout>