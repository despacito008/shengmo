<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="15dp"
    android:paddingHorizontal="10dp"
    android:background="@drawable/item_click_bg_selector"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/item_group_listview_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/item_icon_bg"
            android:src="@mipmap/morentouxiang" />

        <ImageView
            android:id="@+id/item_group_listview_vip"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/guanfangbiaozhi"
            android:visibility="invisible" />
    </RelativeLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_group_listview_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/blackGray"
                android:textSize="15dp"
                tools:text="绳艺爱好者" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/item_group_listview_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:singleLine="true"
                android:textColor="@color/lightGray"
                app:layout_textSizePercent="63%"
                tools:text="1 本群为绳艺爱好者" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <TextView
            android:id="@+id/tv_item_group_claim_time"
            android:layout_marginTop="3dp"
            android:textSize="12dp"
            android:textColor="@color/lightGray"
            android:includeFontPadding="false"
            tools:text="认领时间：2000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_group_listview_peoplecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:background="@drawable/border_group_numbers"
                android:drawableLeft="@mipmap/lanseren"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:textColor="#67cdff"
                app:layout_textSizePercent="53%"
                tools:text="60人" />

            <TextView
                android:id="@+id/item_group_listview_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="@drawable/border_group_distance"
                android:drawableLeft="@mipmap/huangsedingwei"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:textColor="#ffd339"
                app:layout_textSizePercent="53%"
                tools:text="100km" />
        </com.zhy.android.percent.support.PercentLinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item_group_claim_new_owner"
            tools:src="@mipmap/morentouxiang"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:layout_marginTop="5dp"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:textColor="@color/white"
            android:background="@drawable/bg_round_purple"
            android:textSize="12dp"
            android:text="新群主"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>