<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_click_bg_selector"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_heightPercent="12%h"
        android:paddingLeft="10dip"
        android:paddingRight="10dip">
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/item_gzfshy_listview_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/morentouxiang"
                android:background="@drawable/item_icon_bg"
                />
            <ImageView
                android:id="@+id/item_gzfshy_listview_hongiang"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="30%h"
                app:layout_widthPercent="30%h"
                android:src="@mipmap/qian"
                android:visibility="invisible"
                />
            <ImageView
                android:id="@+id/item_gzfshy_listview_vip"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="30%h"
                app:layout_widthPercent="30%h"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/vip"
                android:visibility="invisible"
                />
            <ImageView
                android:id="@+id/item_gzfshy_listview_online"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_online"
                android:visibility="invisible"
                />
        </com.zhy.android.percent.support.PercentRelativeLayout>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="9"
            app:layout_heightPercent="75%h"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_gzfshy_listview_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:maxLength="10"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical"
                    />

                <ImageView
                    android:id="@+id/item_gzfshy_listview_shiming"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_heightPercent="45%h"
                    app:layout_widthPercent="55%h"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dip"
                    android:visibility="invisible"
                    android:src="@mipmap/renzheng"
                    />

            </com.zhy.android.percent.support.PercentLinearLayout>
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.75"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_gzfshy_listview_Sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    app:layout_textSizePercent="50%"
                    android:drawableLeft="@mipmap/san"
                    android:drawablePadding="3dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/item_gzfshy_listview_role"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:paddingBottom="1dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="1dp"
                    android:textColor="#FFFFFF"
                    app:layout_textSizePercent="50%" />
                  </com.zhy.android.percent.support.PercentLinearLayout>
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.75"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_gzfshy_listview_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/gray_999"
                    android:textSize="11dp"
                    android:layout_gravity="center_vertical"
                    />
            </com.zhy.android.percent.support.PercentLinearLayout>
        </com.zhy.android.percent.support.PercentLinearLayout>
        <ImageView
            android:id="@+id/item_gzfshy_listview_present"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="12%w"
            app:layout_widthPercent="12%w"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:id="@+id/item_gzfshy_listview_presentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:layout_textSizePercent="4%w"
            android:visibility="gone"
            android:layout_marginRight="5dp"
            android:textColor="#333333"/>
        <TextView
            android:id="@+id/item_gzfshy_listview_modou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:layout_textSizePercent="3%w"
            android:visibility="gone"
            android:layout_marginRight="5dp"
            android:textColor="#b73acb"/>


        <ImageView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:src="@mipmap/huojian1"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tuijige"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:textColor="#333333"
                android:text="6/90/1小时"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:textColor="#333333"
                android:text="＋100魅力值"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/item_gzfshy_listview_flag"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="8%w"
            app:layout_widthPercent="15%w"
            android:visibility="invisible"
            android:src="@mipmap/jiaguanzhu"
            android:layout_gravity="center_vertical"
            />

    </com.zhy.android.percent.support.PercentLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"
        app:layout_marginLeftPercent="20%w"
        android:layout_alignParentBottom="true"/>
</com.zhy.android.percent.support.PercentLinearLayout>