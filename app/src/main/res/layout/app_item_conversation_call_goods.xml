<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:layout_height="120dp"
    tools:layout_width="100dp"
    tools:background="#eee"
    android:layout_marginHorizontal="3dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_marginVertical="6dp"
        android:background="@drawable/bg_round_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <com.aiwujie.shengmo.view.roundview.RoundFrameLayout
        android:id="@+id/rfl_choose_item_bg"
        android:visibility="gone"
        tools:visibility="visible"
        app:rRadius="8dp"
        android:padding="2dp"
        android:background="@color/red"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:background="@drawable/bg_round_pink"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_item_choose_info"
            android:background="@color/red"
            android:textColor="@color/white"
            android:paddingVertical="3dp"
            android:gravity="center"
            android:text="最划算"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </com.aiwujie.shengmo.view.roundview.RoundFrameLayout>



    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_conversation_call_times"
            android:paddingVertical="3dp"
            android:textSize="18dp"
            android:textColor="@color/titleBlack"
            android:text="10次"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_item_conversation_call_price"
            android:paddingVertical="2.5dp"
            android:textSize="15dp"
            android:textColor="@color/normalGray"
            android:text="¥16/次"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</FrameLayout>