<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_normal_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_group_search"
    android:gravity="center_vertical"
    android:minHeight="33dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_normal_search" />


    <TextView
        android:id="@+id/tv_layout_normal_search_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:hint="搜索用户"
        android:textColor="@color/lightGray"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_layout_normal_search_search"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginHorizontal="6dp"
        android:background="@drawable/shape_normal_search_bg"
        android:gravity="center"
        android:text="搜索"
        android:textColor="@color/white"
        android:textSize="12dp" />

</LinearLayout>