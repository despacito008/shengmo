<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_item_home_recommend_living"
        tools:background="#66cf"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="70dp"
        android:layout_height="70dp"/>

    <android.support.constraint.Guideline
        app:layout_constraintGuide_percent="0.05"
        android:id="@+id/guide_line_live_sign"
        android:orientation="horizontal"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:visibility="gone"
        tools:visibility="visible"
        android:id="@+id/iv_item_live_interact"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="@id/guide_line_live_sign"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_live_interact_sign"
        app:layout_constraintWidth_percent="0.18"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"/>


    <ImageView
        android:visibility="gone"
        tools:visibility="visible"
        android:id="@+id/iv_item_live_audio"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="@id/guide_line_live_sign"
        app:layout_constraintRight_toLeftOf="@id/iv_item_live_interact"
        android:src="@drawable/ic_live_audio_sign"
        app:layout_constraintWidth_percent="0.18"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <ImageView
        android:visibility="gone"
        tools:visibility="visible"
        android:id="@+id/iv_item_live_contract"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="@id/guide_line_live_sign"
        app:layout_constraintRight_toLeftOf="@id/iv_item_live_audio"
        android:src="@drawable/ic_anchor_sign_contract"
        app:layout_constraintWidth_percent="0.18"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"/>


    <ImageView
        android:visibility="gone"
        tools:visibility="visible"
        android:id="@+id/iv_item_live_password"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="@id/guide_line_live_sign"
        app:layout_constraintRight_toLeftOf="@id/iv_item_live_contract"
        android:src="@drawable/ic_live_password_sign"
        app:layout_constraintWidth_percent="0.18"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <ImageView
        android:background="@drawable/bg_short_video_bottom_mask"
        app:layout_constraintDimensionRatio="3:1"
        app:layout_constraintLeft_toLeftOf="@id/iv_item_home_recommend_living"
        app:layout_constraintRight_toRightOf="@id/iv_item_home_recommend_living"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_home_recommend_living"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <ImageView
        android:id="@+id/iv_item_home_recommend_living_ing"
        app:layout_constraintRight_toRightOf="@id/iv_item_home_recommend_living"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_home_recommend_living"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <TextView
        android:maxLength="6"
        android:ellipsize="end"
        android:id="@+id/tv_item_home_recommend_living"
        app:layout_constraintTop_toBottomOf="@id/iv_item_home_recommend_living"
        android:layout_marginTop="5dp"
        tools:text="美丽人生"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/iv_item_home_recommend_living"
        android:textSize="12dp"
        android:textColor="@color/titleBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <View
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:id="@+id/view_item_live_ticket"
        app:layout_constraintTop_toTopOf="@id/guide_line_live_sign"
        android:background="@drawable/bg_round_ticket_bg"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintRight_toRightOf="@id/tv_item_live_ticket_count"
        android:layout_width="0dp"
        android:layout_height="0dp"/>


    <ImageView
        android:visibility="visible"
        android:id="@+id/iv_item_live_ticket_bean"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintRight_toRightOf="@id/view_item_live_ticket"
        app:layout_constraintTop_toTopOf="@id/view_item_live_ticket"
        app:layout_constraintBottom_toBottomOf="@id/view_item_live_ticket"
        app:layout_constraintLeft_toLeftOf="@id/view_item_live_ticket"
        android:src="@drawable/ic_ticket_bean"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/tv_item_live_ticket_count"
        android:gravity="center"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@id/view_item_live_ticket"
        app:layout_constraintBottom_toBottomOf="@id/view_item_live_ticket"
        app:layout_constraintLeft_toRightOf="@id/iv_item_live_ticket_bean"
        android:textColor="@color/white"
        android:text="100"
        android:textSize="6dp"
        android:paddingHorizontal="2dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>



    <android.support.constraint.Group
        android:id="@+id/group_item_live_ticket"
        app:constraint_referenced_ids="tv_item_live_ticket_count,iv_item_live_ticket_bean,view_item_live_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</android.support.constraint.ConstraintLayout>