<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_marginTopPercent="8%w"
        app:layout_marginBottomPercent="8%w"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:text="使用一张"
            android:layout_gravity="center"
            app:layout_textSizePercent="6%w"
            />
        <TextView
            android:id="@+id/stamp_use_stampType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff9d00"
            android:layout_gravity="center"
            app:layout_textSizePercent="6%w"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:text="发送消息?"
            android:layout_gravity="center"
            app:layout_textSizePercent="6%w"
            />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_marginBottomPercent="3%w"
        >
        <TextView
            android:id="@+id/stamp_use_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"
            android:gravity="center"
            android:background="@drawable/item_gv_bg_zi"
            android:textColor="#FFFFFF"
            android:padding="6dp"
            app:layout_textSizePercent="5%w"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/stamp_use_send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="发送"
            android:gravity="center"
            android:background="@drawable/item_gv_bg_zi"
            android:textColor="#FFFFFF"
            android:padding="6dp"
            app:layout_textSizePercent="5%w"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"/>
    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>