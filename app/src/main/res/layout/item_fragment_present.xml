<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f8f8f8">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:scrollbars="none">
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="19%w"
                app:layout_widthPercent="19%w"
                android:layout_gravity="center_horizontal"
                app:layout_marginTopPercent="3%h"
                android:src="@mipmap/mypresent"
                />

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/mMypresent_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:layout_gravity="center_horizontal"
                    app:layout_textSizePercent="4.2%w"
                    />
                <TextView
                    android:id="@+id/mMypresent_Moudou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:layout_gravity="center_horizontal"
                    app:layout_textSizePercent="4.2%w"
                    android:text="111111"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

            </com.zhy.android.percent.support.PercentLinearLayout>





                <TextView
                    android:id="@+id/mMypresent_kyMoudou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:layout_gravity="center_horizontal"
                    app:layout_marginTopPercent="0.5%w"
                    android:text="111111"
                    />



            <TextView
                android:id="@+id/mMypresent_yyMoudou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:layout_gravity="center_horizontal"
                app:layout_marginTopPercent="0.5%w"
                />

            <TextView
                android:id="@+id/mMypresent_mfMoudou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:layout_gravity="center_horizontal"
                app:layout_marginTopPercent="0.5%w"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/mMypresent_tdnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:layout_gravity="center_horizontal"
                    app:layout_marginTopPercent="0.5%w"
                    />

                <TextView
                    android:id="@+id/mMypresent_tdmodou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:layout_gravity="center_horizontal"
                    app:layout_marginTopPercent="0.5%w"
                    />


            </LinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_marginTopPercent="2%w"
                app:layout_marginLeftPercent="5%w"
                app:layout_marginRightPercent="5%w"
                >
                <com.aiwujie.shengmo.customview.MyGridview
                    android:id="@+id/mMypresent_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:numColumns="3"
                    android:verticalSpacing="5dp"
                    android:horizontalSpacing="5dp"
                    android:scrollbars="none"
                    android:focusable="false"></com.aiwujie.shengmo.customview.MyGridview>
            </com.zhy.android.percent.support.PercentLinearLayout>
        </com.zhy.android.percent.support.PercentLinearLayout>
    </ScrollView>


    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:gravity="center">


        <ImageView
            android:id="@+id/mMypresent_tixian"

            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            app:layout_widthPercent="32%w"
            app:layout_heightPercent="12%w"
            android:gravity="center"
            android:scaleType="fitXY"
            android:visibility="visible"
            android:background="@mipmap/tixianjin"
            />

        <ImageView
            android:id="@+id/mMypresent_luwudui"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            app:layout_widthPercent="32%w"
            app:layout_heightPercent="12%w"
            android:gravity="center"
            android:scaleType="fitXY"
            android:background="@mipmap/dhjmd"
            />
    </com.zhy.android.percent.support.PercentLinearLayout>


</com.zhy.android.percent.support.PercentLinearLayout>