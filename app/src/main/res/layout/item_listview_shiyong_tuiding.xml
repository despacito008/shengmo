<?xml version="1.0" encoding="UTF-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="#FFFFFF"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="8"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/item_listview_allcomment_time"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="#666666"
            android:layout_marginTop="5dp"
            app:layout_textSizePercent="2.1%"/>

        <TextView
            android:id="@+id/tv_tuijige"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:layout_marginTop="5dp"
            app:layout_textSizePercent="2.1%"
            />



    </com.zhy.android.percent.support.PercentLinearLayout>
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="17%w"
        app:layout_heightPercent="17%w"
        android:background="#f8f8f8"
        android:layout_gravity="center_vertical"
        >
        <TextView
            android:id="@+id/item_listview_allcomment_dynamiccontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:layout_textSizePercent="20%"
            android:textColor="#787878"
            android:lines="3"
            android:ellipsize="end"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:padding="3dp"/>
        <ImageView
            android:id="@+id/item_listview_allcomment_dynamiciv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="gone"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentLinearLayout>