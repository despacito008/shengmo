<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nested_scroll_fragment_dynamic_detail_comment_empty"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_normal_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v4.widget.NestedScrollView>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nested_scroll_fragment_dynamic_detail_comment_sort"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="right|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_fragment_dynamic_detail_comment_sort"
                android:text="时间排序"
                android:textSize="12dp"
                android:textColor="@color/lightGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginLeft="5dp"
                android:rotation="270"
               android:layout_marginRight="15dp"
                android:src="@drawable/normal_back"
                android:layout_width="12dp"
                android:layout_height="10dp"/>
            
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_fragment_dynamic_detail_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>