<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_click_bg_selector"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/item_gzfshy_listview_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/morentouxiang"
                android:background="@drawable/item_icon_bg"
                />
            <ImageView
                android:id="@+id/item_gzfshy_listview_hongiang"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="30%h"
                app:layout_widthPercent="30%h"
                android:src="@mipmap/qian"
                android:visibility="invisible"
                />
            <ImageView
                android:id="@+id/item_gzfshy_listview_vip"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="30%h"
                app:layout_widthPercent="30%h"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/vip"
                android:visibility="invisible"
                />

            <ImageView
                android:id="@+id/item_gzfshy_listview_online"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:background="@drawable/bg_user_online"
                tools:visibility="visible"
                android:visibility="invisible" />

        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="9"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    tools:text="蓝色烟语"
                    android:id="@+id/item_gzfshy_listview_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_textSizePercent="55%"
                    android:textColor="#333333"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical"
                    />

                <ImageView
                    android:id="@+id/item_gzfshy_listview_shiming"
                    android:layout_width="19dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dip"
                    android:src="@drawable/ic_zipai"
                    android:visibility="invisible"
                    app:layout_heightPercent="50%h"
                    app:layout_widthPercent="60%h" />

            </com.zhy.android.percent.support.PercentLinearLayout>

            <include layout="@layout/layout_user_normal_info"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.75"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_gzfshy_listview_Sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    app:layout_textSizePercent="50%"
                    android:drawableLeft="@mipmap/san"
                    android:drawablePadding="3dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_vertical"
                    />


                <TextView
                    tools:background="@drawable/bg_user_info_sex_boy"
                    tools:text="斯"
                    android:includeFontPadding="false"
                    android:id="@+id/item_gzfshy_listview_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                     style="@style/user_info_role_text"
                    />
                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/item_dynamic_listview_ll_richCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/item_caifuzhi_bg"
                    android:layout_marginRight="5dp"
                    >
                    <ImageView
                        android:paddingVertical="3dp"
                        android:paddingHorizontal="6dp"
                        android:background="@drawable/bg_user_wealth"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/user_wealth"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/item_dynamic_listview_richCount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="111"
                        android:paddingLeft="3dp"
                        android:paddingRight="5dp"
                        android:textColor="#febf3b"
                        android:textSize="11dp"
                        />
                </com.zhy.android.percent.support.PercentLinearLayout>
                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/item_dynamic_listview_ll_beautyCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/item_meilizhi_bg"
                    >
                    <ImageView
                        android:paddingVertical="3dp"
                        android:paddingHorizontal="6dp"
                        android:background="@drawable/bg_user_info_charm"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/user_charm"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/item_dynamic_listview_beautyCount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="111"
                        android:textColor="#f56684"
                        android:paddingLeft="3dp"
                        android:paddingRight="5dp"
                        android:textSize="11dp" />
                </com.zhy.android.percent.support.PercentLinearLayout>
            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.75"
                android:orientation="horizontal">
                <TextView
                    tools:text="北京市"
                    android:id="@+id/item_gzfshy_listview_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:textColor="@color/lightGray"
                    app:layout_textSizePercent="58%"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:textColor="@color/lightGray"
                    tools:text="2021-05-25"
                    android:id="@+id/item_gzfshy_listview_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    app:layout_textSizePercent="58%"
                    android:layout_gravity="center_vertical"
                    />
            </com.zhy.android.percent.support.PercentLinearLayout>

        </com.zhy.android.percent.support.PercentLinearLayout>

        <ImageView
            android:id="@+id/item_gzfshy_listview_present"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="12%w"
            app:layout_widthPercent="12%w"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:id="@+id/item_gzfshy_listview_presentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="10sp"
            android:visibility="gone"
            android:layout_marginRight="5dp"
            android:textColor="#333333"/>
        <TextView
            android:id="@+id/item_gzfshy_listview_modou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:layout_textSizePercent="3%w"
            android:visibility="gone"
            android:layout_marginRight="5dp"
            android:textColor="#b73acb"/>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="15%w"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_cityya2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="10dp"
                android:layout_marginVertical="5dp"
                tools:text="江苏省"
                android:gravity="center"
                tools:visibility="visible"
                android:visibility="gone"/>

            <ImageView
                android:layout_marginVertical="5dp"
                android:id="@+id/item_gzfshy_listview_flag"
                android:layout_height="30dp"
                android:layout_width="match_parent"
                android:visibility="invisible"
                android:src="@mipmap/jiaguanzhu" />

        </LinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>

    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"
        app:layout_marginLeftPercent="20%w"
        android:layout_alignParentBottom="true"/>
</com.zhy.android.percent.support.PercentLinearLayout>