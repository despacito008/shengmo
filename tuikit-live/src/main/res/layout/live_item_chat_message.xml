<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <com.tencent.qcloud.tim.tuikit.live.component.other.RoundLinearLayout
            android:id="@+id/ll_item_chat_message"
            app:rRadius="5dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#4000"
            android:padding="3dp"
            android:layout_marginTop="3dp">
                <ImageView
                    android:id="@+id/live_tv_live_anchor_level"
                    android:layout_width="33dp"
                    android:visibility="gone"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"/>

                <ImageView
                    android:visibility="gone"
                    android:alpha="0.7"
                    tools:src="@drawable/live_manager_icon"
                    android:id="@+id/live_tv_live_anchor_manager"
                    android:layout_width="33dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"/>

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/live_tv_live_anchor_v_level"
                    android:layout_width="14dp"
                    android:layout_height="13dp"
                    tools:src="@drawable/user_vip"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:layout_marginLeft="1.5dp"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <LinearLayout
                    android:alpha="0.7"
                    android:visibility="gone"
                    android:id="@+id/ll_live_message_wealth"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingRight="6dp"
                    android:background="@drawable/bg_live_message_wealth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                        <ImageView
                            android:paddingHorizontal="5.5dp"
                            android:id="@+id/iv_layout_user_normal_info_wealth"
                            android:src="@drawable/user_wealth"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"/>


                        <TextView
                            android:paddingVertical="1dp"
                            android:layout_marginLeft="0dp"
                            android:includeFontPadding="false"
                            tools:text="10000"
                            android:textSize="11dp"
                            android:textColor="@color/white"
                            android:id="@+id/tv_live_message_wealth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:layout_marginHorizontal="5dp"
                    android:paddingRight="5dp"
                    android:id="@+id/sendcontext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:includeFontPadding="false"
                    android:textColor="@android:color/white"
                    tools:text="文字消息文字消息文字消息文字消息文字消息文字消息文字消息文字消息文字消息文字消息"
                    android:gravity="start" />
        </com.tencent.qcloud.tim.tuikit.live.component.other.RoundLinearLayout>

</LinearLayout>
