<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/view_live_pk_stop"
        android:background="@drawable/bg_rb_top_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="2:1" />


    <TextView
        android:id="@+id/tv_live_link_type_title"
        android:text="请选择你的连麦方式"
        android:textStyle="bold"
        android:textColor="#131415"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="@id/view_live_pk_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        app:layout_constraintTop_toTopOf="@id/tv_live_link_type_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_live_link_type_manager"
            android:layout_marginRight="20dp"
            android:paddingHorizontal="50dp"
            android:paddingVertical="15dp"
            android:text="场控发言"
            android:textSize="13dp"
            style="@style/mConfirmText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_live_link_type_user"
            style="@style/mConfirmText"
            android:layout_marginLeft="20dp"
            android:paddingHorizontal="50dp"
            android:paddingVertical="15dp"
            android:text="普通连麦"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>